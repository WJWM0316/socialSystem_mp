@import '../../../iconfont.wxss'

.avatarUpload {
  width: 100%;
  height: 100%;
  display: block;
  position: relative;
}
.avatarImg {
  width: 100%;
  height: 100%;
  border-radius: 50%;
  background: #fff;
  background-size: 100% 100%;
  border: 4rpx solid #fff;
  box-sizing: border-box;
  position: relative;
}
.avatar{
  width: 150rpx;
  height: 150rpx;
}

.avatarUpload .static {
  position: absolute;
  color: #BCBCBC;
  font-size: 52rpx;
  top: 50%;
  left: 50%;
  transform: translate3d(-50%, -50%, 0);
}

.icon {
  width: 54rpx;
  height: 54rpx;
  background:rgba(255,220,41,1);
  border:4rpx solid rgba(255,255,255,1);
  font-size: 26rpx;
  color: #652791;
  position: absolute;
  right: 0;
  bottom: 0;
  text-align: center;
  line-height: 54rpx;
  border-radius: 50%;
}