
@import '../../../iconfont.wxss'
@import '../../../app.wxss'
.ul{
  box-sizing: border-box;
  width: 100%;
  padding: 0 30rpx 20rpx;
}
.li{
  padding: 40rpx 40rpx 30rpx 40rpx;
  box-sizing: border-box;
  width: 100%;
  background-color: #FFF;
  border-radius: 10rpx;
  margin-bottom: 20rpx;
  position: relative;
}
.li::after {
  content: '';
  width: calc(100% - 80rpx);
  height: 1rpx;
  background: #E8E9EB;
  position: absolute;
  left: 40rpx;
  bottom: 0;
}
.ul .formIdBtn:last-child .li {
  margin-bottom: 0;
}
.ul .formIdBtn:last-child .li::after {
  display: none;
}
.box-shadow{
  box-shadow:0rpx 0rpx 40rpx 0rpx rgba(22,39,77,0.1);
}
.li.index {
  box-shadow:0rpx 0rpx 30rpx 0rpx rgba(22,39,77,0.1);
  border-radius:16rpx;
}
.li .name{
  display: flex;
  justify-content: space-between;
  align-items: center;
  font-size: 32rpx;
  font-weight:600;
  color: #354048;
}
.li .name .title {
  max-width: 300rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  font-size:32rpx;
  font-weight:500;
  color:rgba(40,40,40,1);
  line-height:32rpx;
}
.li .name .salary{
  color: #FF7F4C;
  font-weight:bold;
  font-size:32rpx;
  line-height:32rpx;
}
.li .company{
  font-size: 26rpx;
  color: #5C565D;
  font-weight:400;
  line-height:26rpx;
  margin-top: 16rpx;
}
.li .labelList{
  display: flex;
  margin-top: 16rpx;
}
.li .labelList .label{
  line-height: 24rpx;
  padding: 10rpx 12rpx;
  font-size: 24rpx;
  font-weight: 400;
  background-color: #F8F8F8;
  color: #929292;
  border-radius: 4rpx;
  margin-right: 16rpx;
}
.hr{
  display: flex;
  margin-top: 15rpx;
  align-items: center;
  justify-content: space-between;
  height: 66rpx;
}
.hr .hrImg{
  width: 52rpx;
  height: 52rpx;
  background-color: #ccc;
  border-radius: 50%;
  margin-right: 16rpx;
  overflow: hidden;
}
.hr .hrImg image{
  width: 100%;
  height: 100%;
  display: block;
}
.hr .conLeft {
  height: 66rpx;
  display: flex;
  padding-top: 13rpx;
  box-sizing: border-box;
}
.hr .logo {
  width: 66rpx;
  height: 66rpx;
  display: block;
  box-shadow:0rpx 8rpx 20rpx 0rpx rgba(45,45,45,0.06);
  border-radius:6rpx;
  border:1rpx solid rgba(251,251,255,1);
}
.hr .hrName{
  font-size: 24rpx;
  font-weight: 400;
  color: #626262;
  align-items: center;
  max-width: 400rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  line-height: 52rpx;
}
.formIdBtn {
  position:relative;
  display:block;
  background: none;
  padding: 0;
  text-align: left;
  overflow:inherit;
}
.formIdBtn::after {
  display: none;
}
.craete {
  padding: 42rpx 40rpx 38rpx;
  background: #fff url('https://attach.lieduoduo.ziwork.com/front-assets/images/createBg1.png') no-repeat 396rpx 32rpx;
  background-size: 262rpx auto;
  border-radius:16rpx;
}
.craete .title {
  font-weight: 700;
  font-size:36rpx;
  color:#652791;
  line-height:36rpx;
}
.craete .desc {
  font-size:24rpx;
  font-weight:300;
  color:#666666;
  line-height:24rpx;
  margin-top: 12rpx;
}
.craete .btn {
  width:260rpx;
  height:60rpx;
  background:#FFDC29;
  border-radius:30rpx;
  font-size:28rpx;
  color:#652791;
  line-height:60rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  margin-top: 24rpx;
  font-weight: 700;
}
.craete .btn .icon {
  font-size: 28rpx;
  margin-left: 12rpx;
  display: block;
}