@import '../../../iconfont.wxss'

.adPop {
	width: 100%;
	height: 100%;
	position: fixed;
	top: 0;
	left: 0;
	z-index: 5;
}
.adPopBg {
	width: 100%;
	height: 100%;
	position: absolute;
	top: 0;
	left: 0;
	background:rgba(0,0,0,0.5);
	z-index: 1;
}
.adContent {
	width: 570rpx;
	position: absolute;
	top: 50%;
	left: 50%;
	transform: translate3d(-50%, -50%, 0);
	z-index: 2;
}
.adContent .img {
	width: 100%;
	display: block;
	margin: 0 auto;
}
.close {
	width: 68rpx;
	height: 68rpx;
	border: 2rpx solid #000;
	background: #fff;
	border-radius: 50%;
	margin: 30rpx auto;
	display: block;
	font-size: 24rpx;
	text-align: center;
	line-height: 68rpx;
}