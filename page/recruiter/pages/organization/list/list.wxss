
.search {
	width: 100%;
	height:108rpx;
	background:#fff;
	box-shadow:0rpx 0rpx 20rpx 0rpx rgba(50,14,59,0.08);
	padding: 16rpx 30rpx 24rpx 30rpx;
	box-sizing: border-box;
	position: fixed;
	left: 0;
  z-index: 1;
}
.search .searchBar {
	padding: 0 10rpx;
	height:68rpx;
	background:#F8F8F8;
	border-radius:34rpx;
	font-size:28rpx;
  text-align: center;
}

.organizationList {
	margin-top: 20rpx;
	padding-top: 108rpx;
	padding-bottom: 180rpx;
}
.list {
	padding: 0 40rpx;
	background: #FFFFFF;
}

.list-item {
	padding: 36rpx 0 36rpx 134rpx;
	height: 108rpx;
	position: relative;
	border-bottom: 1rpx solid #E8E9EB;
  box-sizing: content-box;
  text-align: left;
}
.list-item:last-child {
	border: none;
}
.logo {
	position: absolute;
	top: 36rpx;
	left: 0;
	width: 108rpx;
	height: 108rpx;
	display: block;
	border-radius:24rpx;
}
.content {
	height: 108rpx;
}
.name {
	font-size:36rpx;
	font-weight:700;
	color:#282828;
	line-height:36rpx;
	margin: 14rpx 0 18rpx;
}
.address {
	font-size:28rpx;
	font-weight:300;
	color:#626262;
	line-height:28rpx;
}

.addBtn {
	width: 100%;
	padding: 30rpx 100rpx;
	background: #fff;
	position: fixed;
	bottom: 0;
	left: 0;
	box-sizing: border-box;
}
.addBtn .btn {
	height:88rpx;
	background:#652791;
	border-radius:49rpx;
	font-size:32rpx;
	color:#fff;
	line-height:88rpx;
	text-align: center;
}