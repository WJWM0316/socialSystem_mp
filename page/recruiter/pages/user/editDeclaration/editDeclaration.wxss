
.textBox {
	padding: 20rpx 40rpx 0;
	background: #fff;
	margin-top: 20rpx;
}
.title {
	font-size:26rpx;
	font-weight:bold;
	color:rgba(101,39,145,1);
	line-height:38rpx;
	margin-bottom: 24rpx;
}
.textarea {
	width: 100%;
	height: 372rpx;
	color: #282828;
	font-weight: 400;
	font-size: 28rpx;
}
.tip {
	width: 100%;
	height: 68rpx;
	display: flex;
	justify-content: space-between;
	align-items: center;
	font-size: 24rpx;
	font-weight: 400;
	color: #BCBCBC;
}
.tip .look {
	color: #652791;
}
.tip .look .icon {
	margin-right: 12rpx;
	font-size: 28rpx;
}
.btnBox {
	width: 100%;
	padding: 30rpx 100rpx;
	background: #fff;
	box-sizing: border-box;
	position: fixed;
	left: 0;
	bottom: 0;
	display: flex;
}
.btn {
	flex: 1;
	background: #652791;
	color: #fff;
	height: 88rpx;
	line-height: 88rpx;
	border-radius: 48rpx;
	font-size: 32rpx;
	font-weight:400;
}
.btnBox.remove {
	padding: 30rpx 70rpx;
}
.removeBtn {
	flex-basis: 248rpx;
	height: 88rpx;
	line-height: 88rpx;
	background:rgba(205,203,207,1);
	border-radius:48rpx;
	font-size:32rpx;
	font-weight:400;
	color:#fff;
	margin-right: 24rpx;
}
