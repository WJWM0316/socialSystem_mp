.interviewMark{
	padding-bottom: 148rpx;
	min-height: 100vh;
	box-sizing: border-box;
	background: white;
}

.interviewMark .h2{
	font-size:28rpx;
	font-weight:700;
	color:rgba(146,146,146,1);
	line-height:1;
	background: white;
	padding: 50rpx 60rpx 0 60rpx;
}

.interviewMark .h3{
	font-size:28rpx;
	font-weight:700;
	color:rgba(146,146,146,1);
	line-height:1;
	background: white;
	padding: 0 60rpx 20rpx 60rpx;
}

.interviewMark .ul{
	padding: 30rpx 53rpx 60rpx 53rpx;
	background: white;
	overflow: hidden;
}

.interviewMark .li{
	width:310rpx;
	height:80rpx;
	line-height: 80rpx;
	text-align: center;
	background:rgba(255,255,255,1);
	border-radius:40rpx;
	border:1rpx solid rgba(188,188,188,1);
	font-size:28rpx;
	color:rgba(146,146,146,1);
	margin-bottom: 20rpx;
	display: inline-block;
}

.interviewMark .disabled {
	color: #282828 !important;
	border-color: #5C565D !important;
}
.interviewMark .active{
	border-color: #652791;
	color: #652791;
}

.interviewMark .li:nth-child(2n){
	float: right;
}

.interviewMark .li:nth-child(2n + 1){
	float: left;
}
.interviewMark .edit-box {
	background: white;
	padding: 0 50rpx;
	overflow: hidden;
}

.edit-box .edit{
	width:100%;
	height:312rpx;
	background:rgba(251,251,255,1);
	border-radius:16rpx;
	border:1rpx solid rgba(239,233,244,1);
	margin-bottom: 25rpx;
}

.interviewMark .textarea {
	font-size:28rpx;
	font-weight:300;
	color:#282828;
	line-height:38rpx;
	width: 100%;
	height: calc(100% - 72rpx);
	box-sizing: border-box;
	padding: 24rpx;
}

.interviewMark .sum {
	height: 72rpx;
	text-align: right;
	font-size:24rpx;
	color:rgba(177,182,195,1);
	line-height: 72rpx;
	padding-right: 30rpx;
}

.interviewMark .active {
	color: #652791;
}

.interviewMark .warning{
	color: red;
}

.interviewMark .btn-area {
	width: 100%;
	padding: 30rpx 100rpx;
	background: #fff;
	box-shadow:0rpx -1rpx 0rpx 0rpx rgba(206,215,220,1);
	box-sizing: border-box;
	position: fixed;
	left: 0;
	bottom: 0;
}
.interviewMark .button-submit {
	height:88rpx;
	background:rgba(245,244,247,1);
	border-radius:48rpx;
	font-size:32rpx;
	font-weight:400;
	color:rgba(205,203,207,1);
	text-align: center;
	line-height: 88rpx;
	background:rgba(101,39,145,1);
	box-shadow:0rpx 20rpx 18rpx 0rpx rgba(101,39,145,0.2);
	color:rgba(255,255,255,1);
}

.interviewMark .button-enable {
	background:rgba(101,39,145,1);
	box-shadow:0rpx 20rpx 18rpx 0rpx rgba(101,39,145,0.2);
	color:rgba(255,255,255,1);
}

.interviewMark .tips {
	background:rgba(251,251,255,1);
	border-radius:16rpx;
	border:1rpx solid rgba(239,233,244,1);
	margin: 0 50rpx;
	padding: 24rpx 40rpx;
	box-sizing: border-box;
	font-size:28rpx;
	font-weight:300;
	color:rgba(40,40,40,1);
	line-height:38rpx;
}