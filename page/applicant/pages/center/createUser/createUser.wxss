.myPicker{
  height: 100rpx;
}
.header{
  box-sizing: border-box;
  padding-top: 185rpx;
  position: relative;
  width: 100%;
  height: 482rpx;
}
.headerBg{
  width: 100%;
  position: absolute;
  z-index: -1;
  top: 0;
  left: 0;
}
.header .title{
  text-align: center;
  display: block;
  font-size:56rpx;
  line-height: 56rpx;
  font-weight:600;
  color: #FFFFFF;
}
.header .subtitle{
  text-align: center;
  display: block;
  margin-top: 17rpx;
  font-size:26rpx;
  line-height: 28rpx;
  font-weight:400;
  color: #FFF;
}
.avatarBox{
  width: 208rpx;
  height: 208rpx;
  margin: 0 auto;
  margin-top: 44rpx;
  position: relative;
}
.avatarBox .photoIcon{
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
  background-color: #FFDC29;
  display: flex;
  justify-content: center;
  align-items: center;
  color: #652791;
  position: absolute;
  right: 10rpx;
  bottom: 4rpx;
  font-size: 32rpx;
  border:4rpx solid #fff;
  box-sizing: border-box;
}
.gender{
  width: 260rpx;
  height: 80rpx;
  border-radius:100rpx;
  overflow: hidden;
  margin: 0 auto;
  margin-top: 92rpx;
  border:1px solid rgba(232,233,235,1);
}
.gender view{
  text-align: center;
  display: inline-block;
  width: 50%;
  height: 100%;
  line-height: 80rpx;
  background-color: #F7F9FC;
  color: #BCBCBC;
}
.gender .active{
  color: #FFFFFF;
  background-color: #652791;
}
.name{
  width: 550rpx;
  margin: 0 auto;
  margin-top: 40rpx;
}
.name input {
  box-sizing: border-box;
  padding: 0 20rpx;
  width: 550rpx;
  height: 88rpx;
  text-align: center;
  font-size: 32rpx;
  font-weight:500;
  color: #282828;
  background:rgba(247,249,252,1);
  border-radius: 50rpx;
  border:1rpx solid rgba(232,233,235,1);
}
.time{
  color: #282828;
  width: 550rpx;
  height: 80rpx;
  background:rgba(247,249,252,1);
  border-radius: 50rpx;
  margin: 0 auto;
  margin-top: 32rpx;
  text-align: center;
  line-height: 80rpx;
  font-size: 32rpx;
  font-weight: 500;
  border:1rpx solid rgba(232,233,235,1);
}
.btn-area {
  width: 100%;
  position: fixed;
  left: 0;
  bottom: 56rpx;
}
.btn-area button{
  width: 128rpx;
  height: 128rpx;
  border-radius: 50%;
  border: none;
  outline: none;
  line-height: 128rpx;
  font-weight: 500;
  text-align: center;
  box-shadow:0rpx 20rpx 18rpx 0rpx rgba(255,220,41,0.2);
  background-color: #FFDC29;
}
.btn-area button .icon {
  font-size: 40rpx;
  color: #652791;
}

