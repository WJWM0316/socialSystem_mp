  <view class="overlay" wx:if="{{showPublicPositionTips}}">
		<view class="box">
			<i class="icon iconfont icon-close" bindtap="routeJump" data-route="hidePublicPositionTips"></i>
			<image src="{{cdnImagePath}}none_position.png"></image>
			<view class="p1">邀请候选人面试</view>
			<view class="p2">至少需要一个招聘中职位~</view>
			<view
				class="button"
				bindtap="routeJump"
				data-action="position">
				去发布/开放职位
			</view>
		</view>
	</view>
</view>
