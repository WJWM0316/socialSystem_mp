
.productList .button-save {
  height:88rpx;
  line-height: 88rpx;
  background:rgba(101,39,145,1);
  border-radius:48px;
  font-size:32rpx;
  font-weight:400;
  color:rgba(255,255,255,1);
  margin-left: 12rpx;
  flex-grow: 1;
	background:rgba(101,39,145,1);
	border-radius:48rpx;
}

.productList .footer {
  height:148rpx;
  background:rgba(255,255,255,1);
  box-shadow:0rpx -1rpx 0rpx 0rpx rgba(206,215,220,1);
  position: fixed;
  left: 0;
  bottom: 0;
  width: 100%;
  box-sizing: border-box;
  padding: 30rpx 85rpx;
  display: flex;
}

.productList .ul {
	margin: 20rpx auto 168rpx auto;
}

.productList .li {
	background:rgba(255,255,255,1);
	position: relative;
	display: flex;
  padding: 32rpx 40rpx;
  box-sizing: border-box;
}

.productList .li:after {
	position: absolute;
	left: 70rpx;
	right: 70rpx;
	bottom: 0;
	height: 1px;
	background:#E8E9EB;
	content: '';
	display: block;
}

.productList .li:last-child:after {
	display: none;
}

.productList .logo-box {
	width:120rpx;
	height:120rpx;
	box-shadow:0rpx 2rpx 12rpx 0rpx rgba(0,0,0,0.12);
	border:2rpx solid rgba(232,233,235,1);
	border-radius: 50%;
	display: inline-block;
	position: absolute;
	left: 40rpx;
	top: 32rpx;
	overflow: hidden;
}

.productList .logo-box image {
	width: 100%;
	height: 100%;
}

.productList .edit-box {
	display: inline-block;
	position: absolute;
	top: 38rpx;
	right: 30rpx;
	color: #652791;
}

.productList .content {
	flex: 1;
	padding: 0 108rpx 0 150rpx;
}

.productList .first {
	line-height: 1;
	overflow: hidden;
	max-width: 450rpx;
	overflow: hidden;
	text-overflow: ellipsis;
	white-space: nowrap;
	margin-top: 16rpx;
}

.productList .strong {
	font-size:36rpx;
	font-weight:500;
	color:rgba(40,40,40,1);
	display: inline-block;
	margin-right: 16rpx;
}

.productList .tips {
	font-size:28rpx;
	font-weight:300;
	color:rgba(40,40,40,1);
	display: inline-block;
	border-left: 1px solid #E8E9EB;
	padding-left: 16rpx;
}

.productList .second {
	font-size:24rpx;
	font-weight:300;
	color:rgba(40,40,40,1);
	padding: 8rpx 18rpx;
	background: #F8F8F8;
	max-width: 450rpx;
	margin-top: 16rpx;
	line-height: 1.5;
	position: relative;
	display: inline-block;
	word-wrap:break-word;
}

.productList .second:before {
	width: 0;
  height: 0;
  position: absolute;
  top: -20rpx;
  left: 30rpx;
  border-width: 10rpx;
  border-style: solid;
  border-color: transparent transparent #F8F8F8 transparent;
  display: block;
  content: '';
}