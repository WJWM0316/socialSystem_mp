.company-images .ul{
  padding: 30rpx 40rpx;
  box-sizing: border-box;
  background-color: #fff;
}
.add {
  width: 100%;
  height: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
}
.company-images .ul::after{
  content: '';
  display: block;
  clear: both;
}
.company-images .ul .commont{
  float: left;
  width: 160rpx;
  height: 160rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background-color: #fff;
  color: #E8E9EB;
  font-size: 36rpx;
  border: 1rpx solid #CED7DC;
  border-radius: 2rpx;
  margin-right: 8rpx;
  margin-bottom: 8rpx;
}
.company-images .ul .commont:nth-of-type(4n){
  margin-right: 0rpx;
}
.company-images .ul .img{
  border: none;
  position: relative;
}
.company-images .ul .addImg{
  margin-right: 0rpx;
}
.company-images .ul .close{
  position: absolute;
  top: 0;
  right: 0;
  width: 40rpx;
  height: 40rpx;
  border-radius: 0 2rpx 0rpx 100rpx;
  background-color:rgba(53,57,67,0.5);
}
.company-images .ul .close i{
  position: absolute;
  top: 8rpx;
  right: 8rpx;
  color: #fff;
  font-size: 20rpx;
}

.company-images .button-save {
  height:88rpx;
  background:rgba(101,39,145,1);
  border-radius:48px;
  font-size:32rpx;
  font-weight:400;
  color:rgba(255,255,255,1);
  margin-left: 12rpx;
  flex-grow: 1;
	background:rgba(101,39,145,1);
	border-radius:48rpx;
	text-align: center;
	line-height: 88rpx;
}

.company-images .footer {
  height:148rpx;
  background:rgba(255,255,255,1);
  box-shadow:0rpx -1rpx 0rpx 0rpx rgba(206,215,220,1);
  position: fixed;
  left: 0;
  bottom: 0;
  width: 100%;
  box-sizing: border-box;
  padding: 30rpx 85rpx;
  display: flex;
}

.company-images .ul {
	margin: 24rpx auto 172rpx auto;
}