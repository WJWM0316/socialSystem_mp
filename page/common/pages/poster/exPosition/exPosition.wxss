.canvas {
	width: 100%;
	height: 100%;
	position: fixed;
	top: 0;
	left: -1000px;
	background: #fff;
}

.imgBox {
	width: 100%;
	padding: 30rpx 40rpx;
	box-sizing: border-box;
}
.showImg {
	width: 100%;
	display: block;
	border-radius: 16rpx;
}
.showImg.filter {
	filter: blur(5px);
}
.save {
	padding: 16rpx 85rpx 8rpx;
	position: fixed;
	width: 100%;
	box-sizing: border-box;
	left: 0;
	bottom: 0;
	background: rgba(255,255,255,0.8);
}
.saveBtn {
	padding: 0;
	background: none;
	border: none;
}
.saveBtn::after {
	display: none;
}
.saveBtn .yellow, .saveBtn .violet{
	width: 100%;
	height: 85rpx;
	line-height: 85rpx;
	background: #FFDC29;
	text-align: center;
	font-size:30rpx;
	font-weight:400;
	color:#282828;
	border-radius: 44rpx;
	position: relative;
	z-index: 2;
}
.saveBtn .violet {
	background: #652791;
	margin-top: -77rpx;
	z-index: 1;
}