.micro .botBox {
	width: 326rpx;
	margin: 40rpx auto 0;
	display: flex;
	justify-content: space-between;
}
.toggleAccount, .toggleIdentity {
	font-size:26rpx;
	color:#fff;
	line-height:26rpx;
	font-weight: 300;
	opacity: 0.6;
  padding: 30rpx 0 20rpx;
}

.tipPop {
	width: 100%;
	height: 100%;
	position: fixed;
	top: 0;
	left: 0;
	background:rgba(0,0,0,0.5);
	display: flex;
	align-items: center;
	justify-content: center;
