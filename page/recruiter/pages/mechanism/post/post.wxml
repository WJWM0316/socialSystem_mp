<view class="mechanism-post">

	<navbar
		title="{{options.productId ? '编辑产品信息' : '填写机构信息'}}"
		background="#fff"
		color="#22292C"
		isFixed="{{true}}">
	</navbar>

	<view class="ul">

		<view class="li flex-box">
			<view class="key">机构logo</view>
			<view class="value">
				<view class="logo">
					<unloadFile bindresultEvent="upload" unloadType="img" number="{{number}}">
						<image
							src="{{cdnPath}}pic_dafult_product.png"
							class="placeholder-image"
							mode="aspectFill">
						</image>
						<image
							src="{{formData.upload.smallUrl}}"
							wx:if="{{formData.upload.smallUrl}}"
							mode="aspectFill"
							class="upload-image">
						</image>
					</unloadFile>
				</view>
				<i class="icon iconfont icon-xiangyou"></i>
			</view>
		</view>

		<view class="li flex-box">
			<view class="key">机构名称</view>
			<view class="value">
				<input
					placeholder="请输入机构名称"
					placeholder-style="color:#929292; font-size: 28rpx;"
					bindinput="bindInput"
					data-key="product_name"
					value="{{formData.product_name}}" />
			</view>
		</view>

		<view class="li flex-box">
			<view class="key"> 联系方式</view>
			<view class="value">
				<input
					placeholder="请输入联系方式"
					placeholder-style="color:#929292; font-size: 28rpx;"
					bindinput="bindInput"
					data-key="site_url"
					value="{{formData.site_url}}" />
			</view>
		</view>

		<view class="li flex-box">
			<view class="key">机构地址</view>
			<view class="value">
				<view class="text default" wx:if="{{1 > 0}}">请输入机构地址</view>
				<view class="text has-value" wx:else>vkjfgvkfgjk</view>
				<i class="icon iconfont icon-xiangyou"></i>
			</view>
		</view>

	</view>
	<view class="footer">
    <view class="button-delete" bindtap="delete" wx:if="{{options.productId}}">删除</view>
    <view class="button-save" bindtap="submit">{{options.productId ? '保存' : '立即创建'}}</view>
  </view>
</view>