.bindPhone .img {
  width: 100%;
}
.bindPhone {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  min-height: 100vh;
  background: #fff;
}
.bindPhone .msg {
  width: 100%;
  position: absolute;
  top: 230rpx;
  text-align: center;
}
.bindPhone .msg .title {
  font-size: 56rpx;
  font-weight: 700;
  color: #fff;
  line-height: 56rpx;
}

.bindPhone .msg .h11 {
  font-size: 64rpx;
  font-weight: 700;
  color: #fff;
  line-height: 56rpx;
  font-weight:800;
  color:rgba(255,255,255,1);
  letter-spacing: 4rpx;
}

.bindPhone .msg .h44 {
  height:36rpx;
  font-size:36rpx;
  /*font-weight:700;*/
  color:rgba(255,255,255,1);
  line-height:36rpx;
  margin-top: 22rpx;
  letter-spacing: 2rpx;
}

.bindPhone .msg .txt {
  font-size: 32rpx;
  font-weight: 500;
  color: #fff;
  line-height: 32rpx;
  margin-top: 22rpx;
}
.bindPhone .phoneInput, .inputBox {
  width: 100%;
  height: 98rpx;
  border: 1rpx solid #E8E9EB;
  background: #FBFBFF;
  box-sizing: border-box;
  padding: 0 0 0 40rpx;
  border-radius: 50rpx;
  font-size: 28rpx;
  color: #282828;
}
.inputBox .codeInput {
  width: 60%;
  height: 100%;
}
.code {
  margin-top: 32rpx;
  position: relative;
}
.voiceCode {
  color: #652791;
}
.code .sendBtn {
  text-align: center;
  line-height: 98rpx;
  border-radius: 30rpx;
  font-size: 26rpx;
  font-weight: 500;
  color: #652791;
  right: 40rpx;
  top: 0;
  position: absolute;
  z-index: 10;
}
.code .sendBtn.wait {
  color: 652791;
}
.form {
  padding: 26rpx 100rpx 0;
}
.tip {
  width: 100%;
  text-align: center;
  color: #929292;
  margin-top: 43rpx;
  font-size: 26rpx;
  font-weight: 400;
  line-height: 37rpx;
}
.wxBtn {
  position:absolute;
  bottom:144rpx;
  left:0;
  width:100%;
  text-align:center;
}
.btnInner {
  display: flex;
  height: 56rpx;
  line-height: 56rpx;
  font-size:28rpx;
  color:rgba(92,86,93,1);
}
.wxBtn .icon {
  width: 56rpx;
  height: 56rpx;
  border-radius: 50%;
  background:rgba(0,194,95,0.08);
  display: flex;
  align-items: center;
  justify-content: center;
  margin-right: 16rpx;
}
.icon1 {
  font-size: 30rpx;
  margin-left: 4rpx;
  color: #CDCBCF;
}
.wxBtn .icon .iconfont {
  font-size: 26rpx;
  color:rgba(0,194,95,0.7);
}
.wxLogin {
  font-size: 28rpx;
  font-weight: 500;
  color: #652791;
  line-height: 28rpx;
  text-align: center;
  display: inline-block;
  background: none;
}
.wxLogin::after{border:none}
.bindBtn {
  width: 550rpx;
  height: 88rpx;
  background: #652791;
  border-radius: 48rpx;
  font-size: 32rpx;
  font-weight: 400;
  color: #fff;
  line-height: 88rpx;
  position: absolute;
  bottom: 240rpx;
  left: 50%;
  margin-left: -275rpx;
}

.bindBtn.noClick {
  background: #F5F4F7;
  color: #CDCBCF;
  box-shadow: none;
}
.userAgreement {
  width: 100%;
  text-align: center;
  font-size:24rpx;
  font-weight:300;
  color:#5C565D;
  line-height:24rpx;
  padding-top: 40rpx;
  position: fixed;
  bottom: 48rpx;
  left: 0;
}
.userAgreement .btn {
  color: #652791;
}
.codePic {
  width:162rpx;
  height:64rpx;
  border:1rpx solid rgba(232,233,235,1);
  position: absolute;
  top: 50%;
  margin-top: -32rpx;
  right: 22rpx;
}