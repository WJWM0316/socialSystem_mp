.search-box{
	background:rgba(255,255,255,1);
	box-shadow:0rpx 0rpx 20rpx 0rpx rgba(50,14,59,0.08);
	position: fixed;
	left: 0;
	right: 0;
	padding: 16rpx 30rpx 24rpx 30rpx;
	height: 108rpx;
	box-sizing: border-box;
}

.search-box .search {
	height:68rpx;
	background:rgba(248,248,248,1);
	border-radius:34rpx;
	width: 100%;
	text-align: center;
}

.formIdBtn {
  padding: 0;
  background: none;
  text-align: left;
  line-height: normal;
  overflow: unset;
  margin: 24rpx 0;
}

.formIdBtn::after {
  display: none;
}

.item2 {
	background:rgba(255,255,255,1);
	position: relative;
}

.item2::after {
	content: '';
	display: block;
	height: 1rpx;
	background: #E8E9EB;
	position: absolute;
	left: 40rpx;
	right: 40rpx;
	bottom: 0;
}

.item2 .row-one {
	display: flex;
	padding: 0 40rpx;
	align-items: center;
}

.item2 .img-box {
	width:108rpx;
	height:108rpx;
	border-radius: 24rpx;
	position: relative;
	overflow: hidden;
	background: rgba(0,0,0,.1);
}

.item2 .img-box image{
	width: 100%;
	height: 100%;
}

.item2 .content {
	padding-left: 36rpx;
	height: 180rpx;
	flex: 1;
  max-width: calc(100% - 184rpx);
  position: relative;
	align-items: center;
	line-height: 180rpx;
}

.item2 .name {
	height:36rpx;
	line-height:36rpx;
	overflow: hidden;
	text-overflow: ellipsis;
	white-space: nowrap;
	max-width: 100%;
	height:36rpx;
	font-size:36rpx;
	font-weight:700;
	color:rgba(40,40,40,1);
	line-height:36rpx;
	margin-top: 50rpx;
}

.item2 .address{
	margin-top: 18rpx;
	overflow: hidden;
	text-overflow: ellipsis;
	white-space: nowrap;
	max-width: 100%;
	color:rgba(98,98,98,1);
	height:28rpx;
	font-size:28rpx;
	font-weight:300;
	color:rgba(98,98,98,1);
	line-height:28rpx;
}

.search-ul{
	padding-top: 128rpx;
	padding-bottom: 148rpx;
}

.button-submit {
	height:88rpx;
	background:#F5F4F7;
	border-radius:48rpx;
	font-size:32rpx;
	color:#CDCBCF;
	text-align: center;
	line-height: 88rpx;
}

.button-enable {
	background:rgba(101,39,145,1);
	box-shadow:0rpx 20rpx 18rpx 0rpx rgba(101,39,145,0.2);
	color:rgba(255,255,255,1);
}

.footer {
	position: fixed;
	left: 0;
	right: 0;
	bottom: 0;
	background: #FBFBFF;
	background:rgba(255,255,255,1);
	box-shadow:0rpx -1rpx 0rpx 0rpx rgba(206,215,220,1);
	opacity:0.96;
	padding: 30rpx 100rpx;
}