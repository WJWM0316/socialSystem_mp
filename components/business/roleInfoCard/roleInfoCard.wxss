@import '../../../iconfont.wxss'
@import '../../../app.wxss'
.roleInfoCard .clear-style {
  background: none;
  border: 0;
  padding: 0;
}
.roleInfoCard .clear-style::after{
  display: none;
  border: none;
  text-align: left;
}
.roleInfoCard .company {
  position: relative;
  padding-left: 164rpx;
  padding-right: 50rpx;
  background: #fff;
  height:140rpx;
  text-align: left;
}
.roleInfoCard .company.detail {
  height: 108rpx;
  padding-left: 134rpx;
}
.roleInfoCard .company.edit {
  padding-right: 0;
}
.roleInfoCard .company .img {
  width: 140rpx;
  height: 140rpx;
  position: absolute;
  top: 0;
  left: 0;
  box-shadow:0rpx 8rpx 20rpx 0rpx rgba(45,45,45,0.06);
  border-radius:18rpx;
}

.roleInfoCard .company.detail .img {
  width: 108rpx;
  height: 108rpx;
  border-radius:24rpx;
}
.roleInfoCard .company .companyMsg, .roleInfoCard .applicant .applicantMsg, .roleInfoCard .recruiter .recruiterMsg {
  display: flex;
  flex-direction: column;
  justify-content: center;
  height: 140rpx;
}
.roleInfoCard .company.detail .companyMsg {
  height: 108rpx;
}
.roleInfoCard .applicant .applicantMsg, .roleInfoCard .recruiter .recruiterMsg {
  height: 120rpx;
}
.roleInfoCard .companyMsg .name, .roleInfoCard .applicantMsg .name, .roleInfoCard .recruiterMsg .name {
  font-size: 36rpx;
  font-weight: 700;
  color: #282828;
  line-height: 36rpx;
  overflow: hidden;
  text-overflow:ellipsis;
  white-space: nowrap;
  text-align: left;
}
.roleInfoCard .applicantMsg .name .msg {
  font-size: 26rpx;
  font-weight: 300;
  color: #929292;
}
.roleInfoCard .applicantMsg .name .nameTxt {
  margin-right: 30rpx;
}
.roleInfoCard .recruiterMsg .name .msg {
  font-size: 28rpx;
  font-weight: 400;
  color: #282828;
}
.roleInfoCard .editBtn {
  position: absolute;
  top: 0;
  right: 0;
  font-size: 30rpx;
  color: #652791;
  padding-right: 33rpx;
  padding-top: 44rpx;
}
.roleInfoCard .companyMsg .detail, .roleInfoCard .applicantMsg .detail, .roleInfoCard .recruiterMsg .detail {
  margin-top: 14rpx;
  font-size: 24rpx;
  font-weight: 300;
  color: #5C565D;
  line-height: 26rpx;
  overflow: hidden;
  text-overflow:ellipsis;
  white-space: nowrap;
  text-align: left;
}
.roleInfoCard .company .icon {
  font-size: 32rpx;
  position: absolute;
  right: -10rpx;
  top: 50%;
  transform: translateY(-50%);
  color: #D3CFD6;
}
.roleInfoCard .editIcon {
  position: absolute;
  font-size: 30rpx;
  color: #652791;
  text-align: center;
  display: block;
  line-height: 50rpx;
  top:15rpx;
  right: 0;
}
.roleInfoCard .applicant, .roleInfoCard .recruiter{
  position: relative;
  padding-top: 30rpx;
  padding-left: 172rpx;
  padding-right: 28rpx;
  background: #fff;
}
.roleInfoCard .recruiter {
  padding-top: 22rpx;
  padding-bottom: 22rpx;
  padding-right: 176rpx;
}
.roleInfoCard .recruiter.recruiterMain {
  padding-right: 30rpx;
}
.roleInfoCard .recruiter.recruiterList {
  padding-top: 30rpx;
  padding-bottom: 30rpx;
  padding-right: 50rpx;
  margin-top: 24rpx;
}
.roleInfoCard .line {
  width: 610rpx;
  height: 10rpx;
  border-radius: 10rpx;
  display: block;
  margin: 0 auto;
}
.roleInfoCard .lineTip {
  width: 610rpx;
  font-size: 28rpx;
  font-weight: 300;
  color: #282828;
  line-height: 42rpx;
  padding: 32rpx 0 40rpx;
  margin: 0 auto;
}
.roleInfoCard .noSign {
  color: #BCBCBC;
  font-weight: 300;
}
.roleInfoCard .applicant .img, .recruiter .img {
  width: 120rpx;
  height: 120rpx;
  display: block;
  border-radius: 50%;
  position: absolute;
  top: 22rpx;
  left: 28rpx;
}
.roleInfoCard .applicant .img.filter {
  filter: blur(8rpx);
}
.roleInfoCard .vip {
  width: 36rpx;
  height: 36rpx;
  background: #FFDC29;
  border: 2rpx solid #fff;
  box-sizing: border-box;
  color: #652791;
  line-height: 32rpx;
  text-align: center;
  font-size: 20rpx;
  font-weight: 700;
  position: absolute;
  top: 112rpx;
  left: 110rpx;
  border-radius: 50%;
}
.roleInfoCard .recruiter .status {
  font-size: 26rpx;
  font-weight: 300;
  color: #929292;
  position: absolute;
  top: 50%;
  right: 28rpx;
  transform: translateY(-50%);
}
.roleInfoCard .contact {
  padding: 0 28rpx;
  line-height: 72rpx;
  display: flex;
  margin-top: 22rpx;
}
.roleInfoCard .mobile, .wechat {
  flex: 1;
  font-size: 28rpx;
  font-weight: 400;
  color: #626262;
  border-top: 1rpx dashed #BACED8;
}
.roleInfoCard .mobile .txt, .roleInfoCard .wechat .txt {
  font-weight: 700;
  color: #652791;
}

.roleInfoCard .waiting{
  font-size: 28rpx;
  font-weight: 400;
  color: #626262;
  border-top: 1rpx dashed #BACED8;
  text-align: center;
  width: 100%;
}