.warp{
  box-sizing: border-box;
  width: 100%;
  padding-bottom: 148rpx;
}
.textArea{
  width: 100%;
  height: 460rpx;
  background-color: #fff;
  padding: 20rpx 40rpx;
  font-size: 28rpx;
  font-weight: 400;
  box-sizing: border-box;
  line-height: 36rpx;
}
.textArea textarea, .simulated{
  width: 100%;
  height: 372rpx;
}
.bottom{
  display: flex;
  justify-content: flex-end;
  align-items: center;
  font-size: 24rpx;
  color: #BCBCBC;
}
.bottom .example i{
  margin-right: 12rpx;
}
.imgBox{
  padding: 30rpx 40rpx;
  box-sizing: border-box;
  background-color: #fff;
}
.imgBox::after{
  content: '';
  display: block;
  clear: both;
}
.imgBox .commont{
  float: left;
  width: 160rpx;
  height: 160rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background-color: #fff;
  color: #E8E9EB;
  font-size: 36rpx;
  border: 1rpx solid #CED7DC;
  border-radius: 2rpx;
  margin-right: 8rpx;
  margin-bottom: 8rpx;
}
.imgBox .commont:nth-of-type(4n){
  margin-right: 0rpx;
}
.imgBox .img{
  border: none;
  position: relative;
}
.imgBox .addImg{
  margin-right: 0rpx;
}
.imgBox .img .close{
  position: absolute;
  top: 0;
  right: 0;
  width: 40rpx;
  height: 40rpx;
  border-radius: 0 2rpx 0rpx 100rpx;
  background-color:rgba(53,57,67,0.5);
}
.imgBox .img .close i{
  position: absolute;
  top: 8rpx;
  right: 8rpx;
  color: #fff;
  font-size: 20rpx;
}
.add{
  width: 160rpx;
  height: 160rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}
.botBtn{
  width: 100%;
  padding: 30rpx 100rpx;
  background: #fff;
  box-sizing: border-box;
  position: fixed;
  bottom: 0;
  left: 0;
  box-shadow:0rpx -1rpx 0rpx 0rpx rgba(206,215,220,1);
}
.save{
  display: inline-block;
  width: 100%;
  height: 88rpx;
  line-height: 88rpx;
  background-color: #652791;
  border-radius:48rpx;
  color: #fff;
  text-align: center;
  font-size: 32rpx;
  font-weight: 400;
}
