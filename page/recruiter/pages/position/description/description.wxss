.position-description {
	padding-bottom: 170rpx;
}
.position-description .tips {
	height:72rpx;
	line-height: 72rpx;
	padding: 0 40rpx;
	text-align: center;
	font-size:24rpx;
	font-weight:400;
	color:rgba(98,98,98,1);
}

.position-description .edit-box {
	height:460rpx;
	position: relative;
	padding: 18rpx 40rpx;
	box-sizing: border-box;
	margin-top: 24rpx;
	background: white;
}

.position-description textarea{
	font-size:28rpx;
	font-weight:400;
	color:#282828;
	line-height:40rpx;
	width: 100%;
	height: calc(100% - 58rpx);
}

.position-description .controls {
	overflow: hidden;
	height: 30rpx;
	line-height: 1;
	position: absolute;
	bottom: 28rpx;
	left: 40rpx;
	right: 40rpx;
}

.position-description .controls .similarity {
	font-size:24rpx;
	font-weight:400;
	color:rgba(101,39,145,1);
	float: left;
}

.position-description .controls .sum {
	float: right;
	font-size:24rpx;
	font-weight:400;
	color:rgba(178,182,194,1);
}

.position-description .controls .red {
	color:red
}

.position-description .controls .icon-chakan {
	margin-right: 10rpx;
	vertical-align: text-top;
}

.position-description .example {
	position: relative;
	padding: 0 40rpx;
	height: 88rpx;
	line-height: 88rpx;
}

.position-description .img-box {
	width:56rpx;
	height:56rpx;
	border:2rpx solid rgba(255,255,255,1);
	background: rgba(0,0,0,.02);
	border-radius: 50%;
	overflow: hidden;
	margin-right: 8rpx;
	display: inline-block;
	vertical-align: middle;
}

.position-description .degress{
	font-size:26rpx;
	font-weight:500;
	color:rgba(40,40,40,1);
	display: inline-block;
	vertical-align: middle;
}

.position-description .infos{
	float: left;
}

.position-description .change{
	float: right;
	font-size:26rpx;
	font-weight:500;
	color:rgba(101,39,145,1);
}

.position-description .icon-huanyihuan{
	margin-right: 8rpx;
}

.position-description .floating-box {
	background:rgba(255,255,255,1);
	border:1rpx solid rgba(232,233,235,1);
	margin: 15rpx 30rpx;
	padding: 20rpx 30rpx;
	font-size:26rpx;
	font-weight:400;
	color:rgba(98,98,98,1);
	position: relative;
}

.position-description .floating-box:before {
	width: 0;
  height: 0;
  border-color: red;
  position: absolute;
  top: -28rpx;
  left: 50rpx;
  border-width: 15rpx;
  border-style: solid;
  border-color: transparent transparent rgba(232,233,235,1) transparent;
  display: block;
  content: '';
}

.position-description .floating-box:after {
	width: 0;
  height: 0;
  border-color: red;
  position: absolute;
  top: -24rpx;
  left: 50rpx;
  border-width: 15rpx;
  border-style: solid;
  border-color: transparent transparent white transparent;
  display: block;
  content: '';
}

.btn-area {
	width: 100%;
	padding: 30rpx 100rpx;
	background: #fff;
	box-shadow:0rpx -1rpx 0rpx 0rpx rgba(206,215,220,1);
	box-sizing: border-box;
	position: fixed;
	left: 0;
	bottom: 0;
}
.position-description .button-submit {
	height:88rpx;
	background:rgba(245,244,247,1);
	border-radius:48rpx;
	font-size:32rpx;
	font-weight:400;
	color:rgba(205,203,207,1);
	text-align: center;
	line-height: 88rpx;
}

.position-description .button-enable {
	background:rgba(101,39,145,1);
	box-shadow:0rpx 20rpx 18rpx 0rpx rgba(101,39,145,0.2);
	color:rgba(255,255,255,1);
}