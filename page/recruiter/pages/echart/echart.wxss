.floating-bar{
	height:88rpx;
	background:rgba(255,255,255,1);
	box-shadow:0rpx 11rpx 30rpx 0rpx rgba(153,193,214,0.08);
	border-radius:0rpx 0rpx 32rpx 32rpx;
	position: fixed;
	left: 0;
	right: 0;
	padding: 0 60rpx;
	box-sizing: border-box;
	line-height: 88rpx;
}

.floating-bar .icon-disejiantou-you{
	position: absolute;
	top: 50%;
	transform: translateY(-50%);
	right: 60rpx;
	color: #652791;
}

.floating-bar .icon-gongsi{
  padding-right: 20rpx;
  color: #8452A7;
}

.floating-bar .label{
	font-size:30rpx;
	font-weight:700;
	color:rgba(40,40,40,1);
}

.echart .placeholder {
	height: 88rpx;
}

.scroll-tab {
  position: relative;
  height: 110rpx;
  line-height: 110rpx;
  overflow: scroll;
  z-index: 1;
  font-size:28rpx;
  font-weight:300;
  color:rgba(40,40,40,1);
  padding-left: 34rpx;
  box-sizing: border-box;
  white-space: nowrap;
  position: relative;
  overflow-y: auto;
  -webkit-overflow-scrolling: touch;
  box-sizing: border-box;
}

::-webkit-scrollbar {
  width: 0;
  height: 0;
  color: transparent;
  display: none;
}

.scroll-tab .li {
  text-align: center;
  display: inline-block;
  vertical-align: middle;
	height:58rpx;
	background:#652791;
	display: inline-block;
	line-height: 58rpx;
	color:#5C565D;
	padding: 0 28rpx;
	background: red;
	margin-right: 12rpx;
	background:rgba(101,39,145,0.04);
	border-radius:29rpx 29rpx 29rpx 0rpx;
	font-size: 26rpx;
}

.scroll-tab .active {
  color: #fff;
  font-weight: 700;
  background: #652791;
  pointer-events: none;
}

.content{
	margin: 0 30rpx;
	background:rgba(255,255,255,1);
	box-shadow:0rpx 0rpx 30rpx 0rpx rgba(0,0,0,0.04);
	border-radius:16rpx;
	overflow: hidden;
}

.tab-bar {
  position: relative;
  height: 98rpx;
  line-height: 98rpx;
  background: white;
  box-sizing: border-box;
  background: white;
  white-space: nowrap;
  position: relative;
  overflow-y: auto;
  -webkit-overflow-scrolling: touch;
  box-sizing: border-box;
  margin: 0 42rpx;
  border-bottom: 1px solid #E8E9EB;
  padding-left: 33rpx;
}

::-webkit-scrollbar {
  width: 0;
  height: 0;
  color: transparent;
  display: none;
}

.tab-bar .li {
  position: relative;
  margin-right: 60rpx;
  text-overflow: ellipsis;
  white-space: nowrap;
  line-height: 98rpx;
  overflow: hidden;
  max-width: 180rpx;
  text-align: center;
  display: inline-block;
  vertical-align: middle;
  font-size:28rpx;
  color:rgba(40,40,40,1);
}

.tab-bar .li:before {
  width:32rpx;
  height:8rpx;
  background:#652791;
  border-radius:4rpx;
  position: absolute;
  left: 50%;
  transform: translateX(-50%);
  bottom: -1rpx;
  content: '';
  display: block;
  opacity: 0;
  transition: all ease .4s;
}

.tab-bar .active {
  color: #652791;
  font-weight: 700;
  pointer-events: none;
}

.tab-bar .active:before {
  opacity: 1;
}

.tab-bar .active:before {
  opacity: 1;
  visibility: visible;
}

.tab-bar .active:after {
  opacity: 1;
  visibility: visible;
}

.data{
	height:198rpx;
	background:rgba(239,233,244,1);
	border-radius:16rpx;
	margin: 36rpx 40rpx 80rpx 40rpx;
	display: flex;
  justify-content: center;
  align-items: center;
  position: relative;
}

.data::after{
	content: '';
	display: block;
	position: absolute;
	left: 50%;
	transform: translateX(-50%);
	background: #652791;
	width: 1px;
	top: 60rpx;
	bottom: 60rpx;
	overflow: hidden;
}

.data .item{
	flex: 1;
	text-align: center;
}

.data .number{
	height:54rpx;
	font-size:54rpx;
	font-weight:700;
	color:rgba(101,39,145,1);
	line-height:54rpx;
}

.data .text{
	height:22rpx;
	font-size:24rpx;
	font-weight:300;
	color:rgba(101,39,145,1);
	line-height:22rpx;
	margin-top: 14rpx;
}

