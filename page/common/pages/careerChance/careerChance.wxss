.job {
  display: flex;
  flex-direction: column;
  align-items: center;
}
.header{
  display: flex;
  justify-content: space-between;
  padding-top: 28rpx;
  padding-left: 30rpx;
  background-color: #F7F9FD;
}
.left{
  display: flex;
}
.chooseArea{
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 26rpx;
  color: #652791;
  width: 182rpx;
  height: 64rpx;
  background-color: #FFFFFF;
  border-radius: 32rpx;
  margin-right: 16rpx;
}
.interested{
  font-size: 26rpx;
  color: #652791;
  width: 164rpx;
  height: 64rpx;
  border-radius:32rpx 0rpx 0rpx 32rpx;
  background-color: #FFF;
  display: flex;
  align-items: center;
  justify-content: center;
}
.interested i{
  margin-right: 6rpx;
}


.select-box {
  width: 100%;
  font-size: 0;
  position: fixed;
  left: 0;
  z-index: 2;
}
.select-bg, .select-area{
  width: 100%;
  background: rgba(0,0,0,0.5);
  position: absolute;
  left: 0;
  top: 49px;
}
.select-tab {
  width: 100%;
  box-sizing: border-box;
  padding: 0 40rpx;
  background: #fff;
  box-shadow:0rpx 0 20rpx 0px rgba(101,39,145,0.04);
  position: relative;
  left: 0;
  z-index: 1;
}
.select-box .item {
  font-size:28rpx;
  font-weight:400;
  color:#5C565D;
  line-height:28rpx;
  position: relative;
  display: inline-block;
  margin-right: 48rpx;
  padding: 35rpx 0;
}
.select-tab .item.cur {
  color: #652791;
}
.select-tab .item.cur .icon {
  transform: rotate(180deg);
}
.select-tab .item.actived {
  color: #652791;
}
.select-box .item .txt {
  max-width: 154rpx;
  display: inline-block;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
  margin-right: 4rpx;
}
.select-box .picker {
  display: inline-block;
}

.select-box .iconfont {
  display: inline-block;
}

.select-area {
  width: 100%;
  padding: 64rpx 40rpx 32rpx;
  background: #fff;
  box-sizing: border-box;
  font-size: 0;
  max-height: 658rpx;
  overflow-y: auto;
  -webkit-overflow-scrolling: touch;
}

.select-area-item {
  min-width: 150rpx;
  padding: 0 34rpx;
  line-height: 58rpx;
  border-radius:50rpx;
  border:1rpx solid #CDCBCF;
  margin: 0 22rpx 24rpx 0;
  display: inline-block;
  color: #626262;
  font-size:26rpx;
  font-weight:300;
  text-align: center;
  box-sizing: border-box;
}
.select-area-item.cur {
  color: #652791;
  border-color: #652791;
}
.select-area.city .select-area-item:nth-child(4), .select-area.salary .select-area-item:nth-child(4) {
  margin-right: 0;
}
