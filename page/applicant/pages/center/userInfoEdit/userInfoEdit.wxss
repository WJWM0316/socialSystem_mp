.userInfoEdit {
  padding: 0 40rpx;
  background: #fff;
  padding-bottom: 148rpx;
}
.title {
  height: 90rpx;
  line-height: 90rpx;
  background: #FAFBFC;
  font-size: 32rpx;
  font-weight: 400;
  color: #353943;
}
.item {
  height: 123rpx;
  border-bottom: 1rpx solid rgba(53,57,67,0.1);
  display: flex;
  justify-content: center;
  align-items: center;
}
.item.avatar {
  height: 205rpx;
}
.avatarCut {
  width: 140rpx;
  height: 140rpx;
  display: inline-block;
}
.txt {
  width: 40%;
  font-size: 28rpx;
  font-weight: 300;
  color: #353943;
  padding-left: 32rpx;
  position: relative;
  box-sizing: border-box;
}
.txt:after {
  content: '*';
  position: absolute;
  top: 50%;
  left: 10rpx;
  transform: translateY(-30%);
  color: #FF3636;
}
.noRed:after {
  display: none;
}
.edit {
  font-size: 28rpx;
  font-weight: 500;
  color: #353943;
  width: 60%;
  text-align: right;
}
.edit input, .radio-group {
  font-weight: 500;
  color: #353943;
}
.radio {
  margin-left: 50rpx;
}
.labelSection {
  padding: 40rpx 0 48rpx;
}
.labelBox {
  font-size: 0;
}
.tab {
  font-size: 28rpx;
  font-weight: 300;
  color: #626262;
  height: 60rpx;
  line-height: 60rpx;
  text-align: center;
  display: inline-block;
  padding: 0 38rpx;
  border: 1rpx solid #BACED8;
  border-radius: 30rpx;
  margin: 0 20rpx 20rpx 0;
}
.editLabel {
  margin: 30rpx auto 0;
  width: 294rpx;
  height: 70rpx;
  line-height: 70rpx;
  box-sizing: border-box;
  border: 1rpx solid #652791;
  text-align: center;
  font-size: 28rpx;
  font-weight: 500;
  border-radius: 34rpx;
  color: #652791;
}
.signBox {
  padding: 32rpx 10rpx 78rpx;
  font-size: 28rpx;
}
.sign {
  width: 100%;
  min-height: 70rpx;
  line-height: 38rpx;
  font-weight: 500;
  color: #353943;
}
.number {
  text-align: right;
  font-size: 28rpx;
  font-weight: 300;
  color: #B2B6C2;
}
.botBtn {
  width: 100%;
  padding: 30rpx 100rpx;
  box-sizing: border-box;
  position: fixed;
  left: 0;
  bottom: 0;
  background: #fff;
  box-shadow:0rpx -1rpx 0rpx 0rpx rgba(206,215,220,1);
  z-index: 2;
}

.botBtn .save {
  width: 100%;
  height: 88rpx;
  line-height: 88rpx;
  background: #652791;
  color: #fff;
  font-size: 32rpx;
  font-weight: 400;
  border-radius: 50rpx;
}