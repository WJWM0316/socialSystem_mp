@import '../../../iconfont.wxss';
@import '../../../app.wxss';

.wrap {
	width: 100%;
	position: relative;
}
.flow {
	position: absolute;
}

.card {
  width:354rpx;
  box-shadow:0rpx 2rpx 14rpx 0rpx rgba(50,14,59,0.08);
  text-align: left;
  position: relative;
  overflow: visible;
  min-height: 200rpx;
  background: none;
}
.icon.specail {
  width: 36rpx;
  height: 54rpx;
  position: absolute;
  top: -4rpx;
  left: 24rpx;
  background: url('https://attach.lieduoduo.ziwork.com/front-assets/images/jIcon.png') no-repeat;
  background-size: 100% 100%;
}
.header {
	padding: 16rpx 28rpx 16rpx;
	background: #E9E9F5;
	background-size: 96rpx 64rpx;
  position: relative;
  border-radius: 16rpx 16rpx 0 0;
  overflow: hidden;
}
.header.hasSignature {
  padding: 16rpx 28rpx 24rpx;
}
.header.specail {
	padding-top: 24rpx;
  background: #652791;
  position: relative;
}

.header.hasSignature::after {
  content: '\e62f';
  font-size: 76rpx;
  line-height: 76rpx;
  position: absolute;
  right: 28rpx;
  top: 110rpx;
  color: rgba(50,39,145,0.04);
}
.header.specail.hasSignature::after {
	top: 215rpx;
}
.header.specail::after {
  right: 14rpx;
  color:rgba(255,255,255,0.11);
}
.specailBox {
	color: #fff;
	text-align: center;
}
.specailBox .avatarBox {
	width:96rpx;
	height:96rpx;
	margin: 0 auto;
}
.specailBox .avatarBox .avatar {
	width: 100%;
	height: 100%;
	border:2rpx solid rgba(255, 255, 255, .6);
	position: static;
}

.header .people {
	padding-left: 84rpx;
	position: relative;
}
.header .avatar {
	width:72rpx;
	height:72rpx;
	border-radius: 50%;
	border:1rpx solid rgba(255,255,255,1);
	position: absolute;
	top: 0;
	left: 0;
  background: #fff;
}
.header .detail {
	height: 72rpx;
	padding-top: 6rpx;
	box-sizing: border-box;
}
.header .detail .name {
	font-size:26rpx;
	font-weight:700;
	color:#282828;
	line-height:34rpx;
}

.company {
	font-size:20rpx;
	font-weight:300;
	color:#282828;
	line-height:28rpx;
}

.signature {
	font-size:22rpx;
	font-weight:700;
	color:#5C565D;
  text-align: left;
	line-height:26rpx;
	margin-top: 22rpx;
	display: -webkit-box;
	-webkit-box-orient: vertical;
	-webkit-line-clamp: 2;
	overflow: hidden;
}
.specail .signature {
  text-align: center;
}

.content {
	padding: 40rpx 28rpx 50rpx;
  background: #fff;
}
.content .positionName {
	font-size:32rpx;
	font-weight:700;
	color:#282828;
	line-height:40rpx;
}
.content .salary {
	font-size:36rpx;
	font-family: 'Number, sans-serif';
	font-weight:700;
	color:#FF7F4C;
	line-height:36rpx;
	margin: 10rpx 0 28rpx;
}
.content .otherInfo {
	font-size: 0;
  line-height: 44rpx;
}
.content .otherInfo .label {
	font-size:20rpx;
	font-weight:300;
	color:#626262;
	padding: 0 12rpx;
  height: 36rpx;
  line-height: 36rpx;
	box-sizing: border-box;
	background: #F8F7F9;
	margin-right: 6rpx;
  display: inline-block;
  vertical-align: top;
}
.content .otherInfo .label:first-child {
  max-width: 150rpx;
}
.content .otherInfo .label:last-child {
	margin-right: 0;
}
.specailBox .name {
	font-size:26rpx;
	font-weight:700;
	line-height:34rpx;
	margin-top: 12rpx;
}
.specailBox .company {
	font-size:22rpx;
	font-weight:300;
	line-height:30rpx;
	color: #fff;
}
.specail .signature {
	margin-top: 16rpx;
	color: #fff;
}
.footer {
	font-size:22rpx;
	font-weight:700;
	color:#5C565D;
	line-height:22rpx;
	overflow: hidden;
	padding: 0 28rpx 40rpx;
  background: #fff;
  border-radius: 0 0 16rpx 16rpx;
}
.viewNum {
	float: left;
}
.viewNum .num {
	color: #652791;
}
.viewNum .normal {
	font-weight: normal;
}
.viewNum.icon {
	width: 83rpx;
  height: 30rpx;
  background: url('https://attach.lieduoduo.ziwork.com/front-assets/images/icon_hptag_24h@3x.png?a=1');
  background-size: 100% 100%;
}
.viewBtn {
	float: right;
	color: #652791;
	font-weight: normal;
}
.viewBtn .icon {
	font-size: 20rpx;
	margin-right: 4rpx;
}

.cardBlock {
	padding: 46rpx 28rpx 44rpx;
	background: #fff;
	box-shadow:0rpx 2rpx 14rpx 0rpx rgba(50,14,59,0.08);
	border-radius:16rpx;
	height:514rpx;
	box-sizing: border-box;
}
.cardBlock .title {
	font-size:36rpx;
	font-weight:700;
	color:#652791;
	line-height:36rpx;
	margin: 2rpx 0 12rpx;
}
.cardBlock .desc {
	font-size:26rpx;
	font-weight:300;
	color:#5C565D;
	line-height:34rpx;
  margin-bottom: 18rpx;
}
.cardBlock .picture {
	width: 278rpx;
	height: 210rpx;
	margin: 0 auto;
  display: block;
}
.cardBlock .cardBtn {
	width:216rpx;
	height:60rpx;
	background:#FFDC29;
	border-radius:30rpx;
	font-size:26rpx;
	font-weight:700;
	color:#652791;
	line-height:60rpx;
	text-align: center;
  margin-top: 20rpx;
}
.cardBlock .cardBtn .icon {
	font-size: 26rpx;
	margin-left: 10rpx;
}