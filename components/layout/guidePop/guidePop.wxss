@import '../../../iconfont.wxss'

.guidePop {
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  background: rgba(0,0,0,0.7);
  display: flex;
  justify-content: center;
  align-items: center;
  padding: 0 50rpx;
  box-sizing: border-box;
  z-index: 10;
}
.guidePop .inner {
  width: 100%;
  background: #fff;
  border-radius:18rpx;
  padding: 94rpx 50rpx 56rpx;
  position: relative;
}
.guidePop .inner .close {
  text-align: center;
  font-size: 30rpx;
  color: #BCBCBC;
  padding: 28rpx;
  position: absolute;
  top: 0;
  right: 0;
}
.guidePop .inner .pic {
  width: 439rpx;
  height: 290rpx;
  display: block;
  margin: 0 auto;
}
.guidePop .inner .desc {
  width: 100%;
  display: inline-block;
  margin: 32rpx 0 32rpx;
  text-align: center;
  font-size:32rpx;
  font-weight:500;
  color:#282828;
  line-height:46rpx;
}
.guidePop .inner .btn {
  width: 100%;
  height:88rpx;
  background:rgba(101,39,145,1);
  box-shadow:0rpx 20rpx 18rpx 0rpx rgba(101,39,145,0.2);
  border-radius:49rpx;
  line-height: 88rpx;
  font-size:32rpx;
  font-weight:400;
  color:#fff;
}
.guidePop .inner .btn.giveUp {
  background: none;
  border:1rpx solid rgba(101,39,145,1);
  color: #652791;
  box-shadow: none;
  margin-top: 32rpx;
}
