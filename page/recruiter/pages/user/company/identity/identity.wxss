.company-identity{
  padding-bottom: 148rpx;  
}

.company-identity .warning {
	background:rgba(255,252,240,1);
	font-size:26rpx;
	font-weight:300;
	color:#FF7F4D;
	padding: 22rpx 40rpx;
	line-height: 36rpx;
	text-align: left;
}

.company-identity form {
	display: block;
	width: 100%;
}

.company-identity .banner {
	height: 480rpx;
	background: #652791;
	background: rgba(0,0,0,.01);
}

.company-identity .input-li {
	height:122rpx;
	display: flex;
	line-height: 122rpx;
	padding: 0 40rpx;
	position: relative;
	background: white;
}

.company-identity .input-li:after {
	content: '';
	display: block;
	position: absolute;
	left: 40rpx;
	right: 20px;
	bottom: 0;
	height: 1rpx;
	background: #E8E9EB;
}

.company-identity .clear-bottom:after {
	display: none;
}

.company-identity .input-li .key {
	font-size:28rpx;
	font-weight:300;
	color:rgba(53,57,67,1);
}

.company-identity .input-li .value {
	flex: 1;
	height: 100%;
	font-size:28rpx;
	font-weight:500;
	color:#282828;
	text-align: right;
}

.company-identity .ul {
	display: table;
	margin: 50rpx auto;
}

.company-identity .ul .li {
	font-size:28rpx;
	font-weight:500;
	color:rgba(188,188,188,1);
	display: inline-block;
	margin-right: 25rpx;
	line-height: 1;
	background: white;
}

.company-identity .ul .column-line {
	border-right: 1px solid #DCDCDC;
	padding-right: 25rpx;
}

.company-identity  .upload-li {
	font-size:28rpx;
	font-weight:500;
	color:rgba(188,188,188,1);
	display: inline-block;
	line-height: 1;
	height:258rpx;
	background:rgba(255,255,255,1);
	display: flex;
	margin: 24rpx 0;
	padding: 40rpx;
	box-sizing: border-box;
	justify-content: center;
  align-items: center;
}

.company-identity  .upload-li .upload-box{
	width:260rpx;
	height:198rpx;
	background:rgba(250,252,255,1);
	border-radius:10rpx 10rpx 0rpx 0rpx;
	margin-left: 62rpx;
	position: relative;
	overflow: hidden;
	position: relative;
}

.company-identity  .upload-li .mask{
	position: absolute;
	left: 0;
	right: 0;
	top: 0;
	bottom: 0;
	background: rgba(40, 40, 40, 0.8);
	z-index: 1000;
	line-height: 198rpx;
	text-align: center;
	font-size:28rpx;
	font-weight:400;
	color:rgba(255,255,255,1);
	border-radius: 10rpx;
}

.company-identity  .upload-li .text{
	flex: 1;
}

.company-identity  .upload-li .h1{
	font-size:32rpx;
	font-weight:bold;
	color:rgba(40,40,40,1);
	margin-bottom: 24rpx;
}

.company-identity  .upload-li .p {
	font-size:24rpx;
	font-weight:400;
	color:rgba(98,98,98,1);
	line-height: 1.5;
}

.company-identity  .upload-li .upload-button {
	width:100%;
	height:40rpx;
	background:rgba(101,39,145,1);
	border-radius:0rpx 0rpx 10rpx 10rpx;
	position: absolute;
	left: 0;
	bottom: 0;
	font-size:24rpx;
	font-weight:500;
	color:rgba(255,255,255,1);
	text-align: center;
	line-height: 40rpx;
}

.company-identity  .upload-li .default-image {
	position: absolute;
	left: 50%;
	top: 12rpx;
	height: calc(100% - 62rpx);
	width: calc(100% - 60rpx);
	transform: translateX(-50%);
	z-index: 1;
}

.company-identity  .upload-li .upload-image {
	position: absolute;
	left: 0;
	top: 0;
	height: calc(100% - 40rpx);
	width: 100%;
	z-index: 2;
}
.btn-area{
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100%;
  height: 148rpx;
  background-color: #fff;
  z-index: 10;
}

.company-identity  .time-zone {
	position: relative;
	height: 100%;
	flex: 1;
	text-align: right;
	font-size: 30rpx;
	color: rgba(53,57,67,1)
}

.company-identity  .start-time {
	display: inline-block;
	height: 100%;
	position: relative;
	padding-right: 40rpx;
}

.company-identity  .end-time {
	display: inline-block;
	height: 100%;
	position: relative;
	padding-right: 40rpx;
	margin-left: 8rpx;
}

.company-identity  .icon-zhishibiao {
	position: absolute;
	top: 50%;
	transform: translateY(-50%);
	right: 0rpx;
	color: #BCBCBC;
}

.company-identity .margintop24 {
	margin-top: 0 !important;
}