.userInfoEdit {
	background: #fff;
  padding-bottom: 148rpx;
}
.title {
	padding: 0 40rpx;
  height: 90rpx;
  line-height: 90rpx;
  background: #FAFBFC;
  font-size: 32rpx;
  font-weight: 400;
  color: #353943;
}
.pic {
  position: relative;
}
.pic image {
	width: 161rpx;
	height: 161rpx;
	display: block;
}
.removeFile {
  position: absolute;
  width: 40rpx;
  height: 40rpx;
  background:rgba(53,57,67,0.5);
  border-radius: 0rpx 2rpx 0rpx 100rpx;
  top: 0;
  right: 0;
}
.removeBtn {
  font-size: 22rpx;
  color: #fff;
  float: right;
  margin: 5rpx 5rpx 0 0;
}
.addPic {
	width: 160rpx;
	height: 160rpx;
	line-height: 162rpx;
	text-align: center;
	border-radius: 2rpx;
	border: 1rpx solid #E8E9EB;
	box-sizing: border-box;
	margin: 1rpx 0;
	font-size: 52rpx;
	color: #E8E9EB;
}
.item {
	padding: 0 40rpx;
  height: 123rpx;
  border-bottom: 1rpx solid rgba(53,57,67,0.1);
  display: flex;
  align-items: center;
}
.item.picBox {
	height: auto;
	display: block;
	padding: 40rpx 40rpx 32rpx;
}
.picList {
	font-size: 0;
}
.picList .pic {
	margin-right: 8rpx;
  margin-bottom: 8rpx;
	display: inline-block;
	vertical-align: top;
}
.picList .pic:nth-child(4n) {
	margin-right: 0;
}
.txt {
  width: 40%;
  font-size: 28rpx;
  font-weight: 300;
  color: #353943;
  padding-left: 32rpx;
  position: relative;
  box-sizing: border-box;
}
.txt:after {
  content: '*';
  position: absolute;
  top: 50%;
  left: 10rpx;
  transform: translateY(-30%);
  color: #FF3636;
}
.noRed:after {
  display: none;
}
.edit {
  font-size: 28rpx;
  font-weight: 500;
  color: #353943;
  width: 60%;
  text-align: right;
}
.edit input, .radio-group {
  font-weight: 500;
  color: #353943;
}
.radio {
  margin-left: 50rpx;
}
.editLabel {
  margin: 30rpx auto 0;
  width: 294rpx;
  height: 70rpx;
  line-height: 70rpx;
  box-sizing: border-box;
  border: 1rpx solid #2878FF;
  text-align: center;
  font-size: 28rpx;
  font-weight: 500;
  border-radius: 34rpx;
  color: #2878FF;
}
.signBox {
  padding: 32rpx 40rpx 78rpx;
  font-size: 28rpx;
}
.sign {
  width: 100%;
  min-height: 70rpx;
  line-height: 38rpx;
  font-weight: 500;
  color: #353943;
}
.number {
  text-align: right;
  font-size: 28rpx;
  font-weight: 300;
  color: #B2B6C2;
}

.botBtn {
  width: 100%;
  padding: 30rpx 100rpx;
  box-sizing: border-box;
  position: fixed;
  left: 0;
  bottom: 0;
  background: #fff;
  box-shadow:0rpx -1rpx 0rpx 0rpx rgba(206,215,220,1);
  z-index: 2;
}

.botBtn .save {
  width: 100%;
  height: 88rpx;
  line-height: 88rpx;
  background: #652791;
  color: #fff;
  font-size: 32rpx;
  font-weight: 400;
  border-radius: 50rpx;
}