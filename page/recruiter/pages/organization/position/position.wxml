<view class="job-list">
  <navbar
  	title="选择职位"
  	background="#FFFFFF"
  	color="#22292C">
  </navbar>

  <view hidden="{{!hasReFresh}}">
    <refreshStatus></refreshStatus>
  </view>

  <chooseOrgEnter></chooseOrgEnter>
  
  <view class="radio-group">
    <view class="li" wx:for="{{onLinePositionList.list}}" wx:key="{{index}}" bindtap="onClick" data-index="{{index}}">
      <view class="content">
        <view class="title">
          <view class="txt1">{{item.positionName}}</view>
          <view class="txt2">{{item.emolumentMin * 1000}}~{{item.emolumentMax * 1000}}元/月</view>
        </view>
        <view class="labels">
          <text class="txt" wx:if="{{item.city || item.district}}">{{item.city}}{{item.district}}</text>
          <text class="txt">{{item.workExperienceName}}</text>
          <text class="txt">{{item.educationName}}</text>
        </view>
      </view>
      <view class="radio-box">
        <view class="myRadio {{item.active ? 'active' : ''}}">
          <i class="icon iconfont icon-wancheng" wx:if="{{item.active}}"></i>
        </view>
      </view>
    </view>
  </view>

  <bottomStatus
  	status="{{onLinePositionList}}"
  	listData="{{onLinePositionList.list}}"
  	desc="没有更多职位了，赶紧去发布职位吧！发布职位>>">
  </bottomStatus>
  
  <view class="footer">
  	<view class="button-submit {{buttonClick ? 'button-enable' : ''}}" bindtap="submit">下一步</view>
	</view>
</view>