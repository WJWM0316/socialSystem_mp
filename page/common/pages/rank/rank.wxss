}

.foot-bar .img-box .image{
  border-radius: 50%;
  width: 100%;
  height: 100%;
}

.foot-bar .content{
  flex: 1;
}

.foot-bar .content .row-one{
  height:30rpx;
  font-size:30rpx;
  font-weight:700;
  color:rgba(40,40,40,1);
  line-height:30rpx;
}

.foot-bar .content .row-two{
  height:24rpx;
  font-size:24rpx;
  font-weight:300;
  color:rgba(146,146,146,1);
  line-height:24rpx;
  margin-top: 13rpx;
}

.foot-bar .strong{
  display: inline;
  color: #652791;
}

.foot-bar .item10{
  display: inline;
  margin-right: 40rpx;
}


.rule-box .mask{
  width:100vw;
  height:100vh;
  background:rgba(0,0,0,.5);
  position: fixed;
  left: 0;
  bottom: 0;
  z-index: 10000;
}

.rule-box .content{
  width:100vw;
  height:892rpx;
  background:rgba(255,255,255,1);
  border-radius:28rpx 28rpx 0rpx 0rpx;
  position: fixed;
  bottom: 0;
  right: 0;
  left: 0;
  overflow: hidden;
  box-sizing: border-box;
  z-index: 10001;
  transform: translateY(100%);
  transition: all ease .2s;
  opacity: .5;
}

.rule-box .show{
  transform: translateY(0%);
  opacity: 1
}

.rule-box .header{
  height:108rpx;
  background:rgba(255,255,255,1);
  font-size:36rpx;
  font-weight:700;
  color:rgba(53,64,72,1);
  line-height: 108rpx;
  text-align: center;
  position: relative;
  margin-bottom: 25rpx;
  padding: 0 60rpx;
}

.rule-box .header .icon-close{
  font-size: 30rpx;
  position: absolute;
  top: 50%;
  transform: translateY(-50%);
  right: 10rpx;
  padding: 0 25rpx;
  color: #929292;
}

.rule-box .value{
  font-size:30rpx;
  font-weight:300;
  color:rgba(40,40,40,1);
  line-height:48rpx;
}

.rule-box .key{
  width:159rpx;
  height:56rpx;
  font-size:30rpx;
  font-weight:700;
  color:rgba(40,40,40,1);
  line-height: 56rpx;
  text-align: center;
  position: relative;
  margin-bottom: 22rpx;
}

.rule-box .key:before{
  width:159rpx;
  height:56rpx;
  background:rgba(255,220,41,1);
  border:2rpx solid rgba(40,40,40,1);
  content: '';
  display: block;
  position: absolute;
  top: 0;
  left: 0;
  z-index: 1;
}

.rule-box .key:after{
  width:159rpx;
  height:56rpx;
  background:white;
  border:2rpx solid rgba(40,40,40,1);
  content: '';
  display: block;
  position: absolute;
  left: 5rpx;
  top: 5rpx;
  z-index: 0;
}

.rule-box .key .text{
  position: relative;
  width: 100%;
  line-height: 60rpx;
  display: inline-block;
  z-index: 2;
}

.rule-box .ul{
  position: relative;
  z-index: 2;
  padding: 0 60rpx;
  position: relative;
  z-index: 2;
  height: calc(892rpx - 108rpx - 25rpx);
  overflow: hidden;
  overflow-y: scroll;
  padding: 0 60rpx;
  width: 100vw;
  box-sizing: border-box;
}

.rule-box .ul .li{
  margin-bottom: 56rpx;
}

.hidden {
  overflow-y: hidden;
}

.listWrap {
  padding-bottom: 150rpx;
}