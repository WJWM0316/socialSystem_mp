
.search {
	width: 100%;
	height:108rpx;
	background:#fff;
	box-shadow:0rpx 0rpx 20rpx 0rpx rgba(50,14,59,0.08);
	padding: 16rpx 30rpx 24rpx 30rpx;
	box-sizing: border-box;
	position: fixed;
	left: 0;
  z-index: 1;
}
.search .searchBar {
	padding: 0 10rpx;
	height:68rpx;
	background:#F8F8F8;
	border-radius:34rpx;
	font-size:28rpx;
  text-align: center;
}

.organizationList {
	margin-top: 20rpx;
	padding-top: 108rpx;
	padding-bottom: 180rpx;
}
.list {
	padding: 0 40rpx;
	background: #FFFFFF;
}

.list-item {
	padding: 36rpx 0 36rpx 134rpx;
	height: 108rpx;
	position: relative;
	border-bottom: 1rpx solid #E8E9EB;
  box-sizing: content-box;
  text-align: left;
}
.list-item:last-child {
	border: none;
}
.logo {
	position: absolute;
	top: 36rpx;
	left: 0;
	width: 108rpx;
	height: 108rpx;
	display: block;
	border-radius:24rpx;
}
.content {
	height: 108rpx;
}
.name {
	font-size:36rpx;
	font-weight:700;
	color:#282828;
	line-height:36rpx;
	margin: 14rpx 0 18rpx;
}
.address {
	font-size:28rpx;
	font-weight:300;
	color:#626262;
	line-height:28rpx;
}

.addBtn {
	width: 100%;
	padding: 30rpx 100rpx;
	background: #fff;
	position: fixed;
	bottom: 0;
	left: 0;
	box-sizing: border-box;
}
.addBtn .btn {
	height:88rpx;
	background:#652791;
	border-radius:49rpx;
	font-size:32rpx;
	color:#fff;
	line-height:88rpx;
	text-align: center;
}

.search-box {
	width: 100%;
	padding: 20rpx 0;
	background: #fff;
  box-sizing: border-box;
  height: 108rpx;
  position: fixed;
  left: 0;
  right: 0;
  z-index: 2;
}

.search-bar {
	width:calc(100vw - 144rpx);
	height:68rpx;
	background:#F8F8F8;
	border-radius:34rpx;
	float: left;
	padding: 0 70rpx;
	box-sizing: border-box;
	position: relative;
  margin-left: 40rpx;
}
.search-bar.edit {
  width: 488rpx;
}
.search-bar .search-input {
	width: 100%;
	height: 100%;
	font-size:28rpx;
	color:#282828;
}
.searchBtn {
	float: right;
	font-size:28rpx;
	color:#929292;
  line-height: 68rpx;
  padding-left: 22rpx;
  width: 104rpx;
  box-sizing: border-box;
}
.searchIcon {
	color: #C7C2C2;
	font-size: 24rpx;
	position: absolute;
	top: 22rpx;
	left: 30rpx;
}

.resetIcon {
	color: #C7C2C2;
	font-size: 26rpx;
	position: absolute;
	top: 0rpx;
	right: 0rpx;
  padding: 22rpx 28rpx 22rpx 16rpx;
  line-height: 1;
  display: block;
}

.match-box-ul {
	position: absolute;
	left: 0;
	right: 0;
	background: white;
	z-index: 1;
	overflow: hidden;
	transition: all ease .4s;
	opacity: 1;
}

.match-box-ul.show {
	bottom: 0;
	opacity: 1;
}

.match-box-ul .li {
	height:108rpx;
	line-height: 108rpx;
	background:rgba(255,255,255,1);
	padding: 0 40rpx;
	position: relative;
	font-size:28rpx;
	font-weight:400;
	color:rgba(98,98,98,1);
	position: relative;
	overflow: hidden;
}

.match-box-ul .li:after {
	content: '';
	display: block;
	position: absolute;
	left: 40rpx;
	right: 40rpx;
	bottom: 0;
	height: 1px;
	background: #E8E9EB;
}

.match-box-ul .icon-jiantou {
	float: right;
	color: #DCDCDC;
	position: absolute;
	right: 40rpx;
	top: 50%;
	transform: translateY(-50%);
	font-size: 17rpx;
}

.historyArea, .hotArea {
	margin: 40rpx;
  font-size: 0;
  max-height: 372rpx;
  overflow: hidden;
  padding-top: 108rpx;
}

.historyArea .title {
	margin-bottom: 24rpx;
  font-size:28rpx;
	color:#929292;
	line-height:36rpx;
  position: relative;
}

.historyArea .title text{
	font-weight:700;
}

.title .remove {
  font-size: 32rpx;
  color: #BCBCBC;
  position: absolute;
  padding: 10rpx;
  top: -10rpx;
  right: -10rpx;
}
.record {
	padding: 0 30rpx;
	height: 58rpx;
	line-height: 52rpx;
	font-size:26rpx;
	color:#929292;
	margin-right: 20rpx;
	margin-bottom: 26rpx;
	border-radius:29rpx;
	border:1rpx solid rgba(205,203,207,1);
  font-weight: normal;
  max-width: 670rpx;
  display: inline-block;
  font-size:26rpx;
  color:rgba(146,146,146,1);
  box-sizing: border-box;
}

.bg {
  position: fixed;
  left: 0;
  top: 0;
  bottom: 0;
  right: 0;
  background: white;
  z-index: -1;
  transition: all ease .4s;
  opacity: 0
}
.opcity {
  opacity: 1
}