
.baseEdit {
	min-height: 100vh;
	background: #FAFCFF;
}
.head {
	background:rgba(255,255,255,1);
	border-radius:10rpx;
	padding: 0 40rpx;
	margin-top: 24rpx;
}
.head .msg .item {
	font-size:28rpx;
	color:#282828;
	line-height:28rpx;
	padding: 47rpx 30rpx 47rpx 22rpx;
	border-bottom: 1rpx solid #E8E9EB;
	align-items: center;
	position: relative;
	overflow: hidden;
}
.head .msg .item.disabled {
	padding: 47rpx 0 47rpx 0;
}
.head .msg .item.companyLogo {
	padding: 32rpx 30rpx 32rpx 22rpx;
}
.website input {
	height: 40rpx;
}
.website .txt {
	line-height: 40rpx;
}
.head .msg .item:last-child {
	margin-bottom: 0;
	border-bottom: none;
}
.head .msg .item .txt {
	float: left;
	color: #626262;
	font-weight: 300;
	position: relative;
}
.head .msg .item .txt.red:after {
	position: absolute;
	content: '*';
	font-size: 28rpx;
	color: #FF3636;
	top: 50%;
	transform: translateY(-30%);
	left: -22rpx;
}
.head .msg .item.companyLogo .txt.red:after {
	transform: translateY(-47%);
}
.head .msg .item.companyLogo .txt {
	line-height: 140rpx;
}
.head .msg .item .value {
	float: right;
	width: 400rpx;
	text-align: right;
}
.logo {
	width: 140rpx;
	height: 140rpx;
	box-shadow:0rpx 8rpx 20rpx 0rpx rgba(45,45,45,0.06);
	border-radius:18rpx;
}
.icon {
	position: absolute;
	font-size: 32rpx;
	color: #CED7DC;
	top: 50%;
	transform: translateY(-50%);
	right: -8rpx;
}
.btn {
	width: 100%;
	padding: 30rpx 100rpx;
	box-sizing: border-box;
	box-shadow:0rpx -1rpx 0rpx 0rpx rgba(206,215,220,1);
	background: #fff;
	position: fixed;
	bottom: 0;
	left: 0;
}
.saveBtn {
	width: 100%;
	height: 88rpx;
	background:rgba(101,39,145,1);
	border-radius:48rpx;
	font-size:32rpx;
	font-weight:400;
	color:#fff;
	line-height:88rpx;
}