
.recruiterList .ul {
	margin: 24rpx 30rpx;
	overflow: hidden;
}

.recruiterList .li {
	height:180rpx;
	background:rgba(255,255,255,1);
	box-shadow:0rpx -5rpx 40rpx 0rpx rgba(22,39,77,0.05);
	border-radius:10rpx;
	padding: 30rpx;
	box-sizing: border-box;
	display: flex;
  justify-content: center;
  align-items: center;
  position: relative;
  width: 100%;
  margin-bottom: 24rpx;
}

.recruiterList .li .img-box {
	width:120rpx;
	height:120rpx;
	border-radius: 50%;
	position: absolute;
	left: 30rpx;
}

.recruiterList .li image {
	width:120rpx;
	height:120rpx;
	border-radius: 50%;
}

.recruiterList .li .recruiterMsg {
	flex: 1;
	padding-left: 150rpx;
}

.recruiterList .li .name {
	font-size:36rpx;
	font-weight:500;
	color:rgba(40,40,40,1);
	line-height: 36rpx;
	margin-bottom: 20rpx;
  max-width: 410rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.recruiterList .li .detail {
	font-size:28rpx;
	font-weight:300;
	color:rgba(98,98,98,1);
	line-height: 1.1;
  max-width: 410rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.recruiterList .li .circle {
  width:36rpx;
  height:36rpx;
  box-sizing: border-box;
  border: 1px solid rgba(188, 188, 188, 1);
  border-radius: 50%;
  position: absolute;
  top: 50%;
  transform: translateY(-50%);
  right: 30rpx;
  text-align: center;
  line-height: 36rpx;
}

.recruiterList .li .circle .icon{
  font-size: 20rpx;
  vertical-align: text-top;
  margin-top: -5rpx;
  font-weight: 900;
}


.recruiterList .li .active-circle {
  background:rgba(101,39,145,1);
  border: 1px solid rgba(188, 188, 188, 1);
  color: white;
}

.recruiterList .li .vip {
  width: 36rpx;
  height: 36rpx;
  position: absolute;
  bottom: 0;
  right: 0;
}

.recruiterList .footer {
	font-size:32rpx;
	font-weight:400;
	color:rgba(101,39,145,1);
	text-align: center;
}

.recruiterList .footer view{
	display: inline-block;
}

.todo-tab {
  height:98rpx;
  background:rgba(255,255,255,1);
  box-shadow:0px 5px 40px 0px rgba(22,39,77,0.05);
  border-radius:49px;
  line-height: 98rpx;
  margin: 30rpx 30rpx 24rpx 30rpx;
  box-sizing: border-box;
  padding: 0 40rpx 0 56rpx;
  font-size:28rpx;
  font-weight:400;
  color:rgba(40,40,40,1);
  position: relative;
}

.todo-tab .icon1{
  color: #652791;
  font-size: 36rpx;
  marign-right: 16rpx;
}

.todo-tab .icon2{
  color: #CED7DC;
  font-size: 36rpx;
  float: right;
}

.todo-tab .text{
  display: inline-block;
  position: relative;
}

.todo-tab .red-dot {
  position: absolute;
  top: 50%;
  right: 88rpx;
  display: block;
  content: '';
  background: red;
  width:14rpx;
  height:14rpx;
  background:rgba(255,73,73,1);
  border-radius: 50%;
  transform: translateY(-50%);
}