.button-submit {
	height:88rpx;
	line-height: 88rpx;
	position: relative;
	margin: 0;
	padding: 0;
	background: transparent;
	overflow: unset;
}

.button-submit .cover{
	background:rgba(255,220,41,1);
	border-radius:44rpx;
	font-size:30rpx;
	text-align: center;
	color:rgba(40,40,40,1);
	position: relative;
	z-index: 2;
  font-weight: 700;
}

.button-submit::before{
	content: '';
	display: block;
	height: 100%;
	width: 100%;
	position: absolute;
	left: 0;
	right: 0;
	bottom: -8rpx;
	background: #652791;
	border-radius: 44rpx;
	z-index: 1
}

.footer {
	position: fixed;
	left: 0;
	right: 0;
	bottom: 0;
	background:rgba(255,255,255,.8);
	opacity:0.96;
	padding: 30rpx 100rpx;
}

.canvas-box {
	margin-top: 224rpx;
}

.canvas-box .canvas{
	margin: 0 auto;
}
.showImgBox {
	width: 440rpx;
	height: 440rpx;
	margin: 0 auto;
	border-radius: 50%;
  background: #fff;
  overflow: hidden;
  display: flex;
  justify-content: center;
  align-items: center;
  border: 1rpx solid #e3d9ed;
}
.showImg {
	width: 406rpx;
	height: 406rpx;
	display: block;
}
.canvas {
	position: fixed;
	top: -1000px;
}
