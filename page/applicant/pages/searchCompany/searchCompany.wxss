.search-company-page {
  padding-bottom: 148rpx;
}
.search-company-page .page-header {
	padding: 55rpx 40rpx 40rpx 40rpx;
	background: white;
}

.search-company-page .h1 {
	font-size:36rpx;
	font-weight:bold;
	color:rgba(40,40,40,1);
	line-height: 1;
}

.search-company-page .h2 {
	font-size:26rpx;
	font-weight:400;
	color:rgba(98,98,98,1);
	line-height: 1;
	margin: 15rpx 0;
}

.search-company-page .p {
	font-size:24rpx;
	font-weight:400;
	color:rgba(146,146,146,1);
	line-height: 1.8;
}

.search-company-page .input-li {
	height:122rpx;
	line-height: 122rpx;
	font-size:32rpx;
	font-weight:500;
	color:rgba(188,188,188,1);
	padding: 0 40rpx;
	display: flex;
	background: white;
	position: relative;
	margin-top: 25rpx;
}

.search-company-page .example {
	font-size:26rpx;
	font-weight:400;
	color:rgba(98,98,98,1);
	line-height: 90rpx;
	background: white;
	padding: 0 40rpx;
}

.search-company-page input {
	height:100%;
	width: 100%;
	color: #282828;
  font-weight:700;
}

.search-company-page .company-name {
	flex: 1;
	font-size: 30rpx;
}

.search-company-page .btn-search {
	width: 150rpx;
}

.search-company-page .li {
	height:98rpx;
	line-height: 98rpx;
	background:rgba(255,255,255,1);
	padding: 0 40rpx;
	position: relative;
	font-size:26rpx;
	font-weight:400;
	color:rgba(98,98,98,1);
	position: relative;
	overflow: hidden;
}

.search-company-page .li:after {
	content: '';
	display: block;
	position: absolute;
	left: 40rpx;
	right: 40rpx;
	bottom: 0;
	height: 1rpx;
	background: #E8E9EB;
}

.search-company-page .li:last-child:after {
	display: none;
}


.bottomBox {
	position: fixed;
	left: 0;
	bottom: 0;
	padding: 30rpx 100rpx;
	background: #fff;
	width: 100%;
	box-sizing: border-box;
}
.button-submit {
	height: 88rpx;
	background:#F5F4F7;
	border-radius:48rpx;
	font-size:32rpx;
	font-weight:400;
	color:#CDCBCF;
	text-align: center;
	line-height: 88rpx;
}

.button-enable {
	background:rgba(101,39,145,1);
	box-shadow:0rpx 20rpx 18rpx 0rpx rgba(101,39,145,0.2);
	color:rgba(255,255,255,1);
}

.icon-jiantou {
	float: right;
	color: #DCDCDC;
	position: absolute;
	right: 40rpx;
	top: 50%;
	transform: translateY(-50%);
	font-size: 17rpx;
}

