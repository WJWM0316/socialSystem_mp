
.textBox {
	padding: 20rpx 40rpx 0;
	background: #fff;
	margin-top: 20rpx;
}
.textarea {
	width: 100%;
	height: 372rpx;
	color: #282828;
	font-weight: 400;
	font-size: 28rpx;
}
.tip {
	width: 100%;
	height: 68rpx;
	display: flex;
	justify-content: space-between;
	align-items: center;
	font-size: 24rpx;
	font-weight: 400;
	color: #BCBCBC;
}
.tip .look {
	color: #652791;
}
.tip .look .icon {
	margin-right: 12rpx;
	font-size: 28rpx;
}
.btnBox {
	width: 100%;
	padding: 30rpx 100rpx;
	background: #fff;
	box-sizing: border-box;
	position: fixed;
	left: 0;
	bottom: 0;
}
.btn {
	width: 100%;
	background: #652791;
	color: #fff;
	height: 88rpx;
	line-height: 88rpx;
	border-radius: 48rpx;
	font-size: 32rpx;
	font-weight:400;
}

.example {
	position: relative;
	padding: 0 40rpx;
	height: 88rpx;
	line-height: 88rpx;
}
.infos{
	float: left;
}
.img-box {
	width:56rpx;
	height:56rpx;
	border:2rpx solid rgba(255,255,255,1);
	background: rgba(0,0,0,.02);
	border-radius: 50%;
	overflow: hidden;
	margin-right: 8rpx;
	display: inline-block;
	vertical-align: middle;
}
.degress{
	font-size:26rpx;
	font-weight:500;
	color:rgba(40,40,40,1);
	display: inline-block;
	vertical-align: middle;
}
.change{
	float: right;
	font-size:26rpx;
	font-weight:500;
	color:rgba(101,39,145,1);
}
.floating-box {
	background:rgba(255,255,255,1);
	border:1rpx solid rgba(232,233,235,1);
	margin: 15rpx 30rpx;
	padding: 20rpx 30rpx;
	font-size:26rpx;
	font-weight:400;
	color:rgba(98,98,98,1);
	position: relative;
}
.iconfont  {
	margin-right: 10rpx;
	vertical-align:-2rpx;
}