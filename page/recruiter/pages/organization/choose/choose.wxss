
.search {
	width: 100%;
	height:108rpx;
	background:#fff;
	box-shadow:0rpx 0rpx 20rpx 0rpx rgba(50,14,59,0.08);
	padding: 16rpx 30rpx 24rpx 30rpx;
	box-sizing: border-box;
	position: fixed;
	left: 0;
  z-index: 1;
}
.search .searchBar {
	padding: 0 10rpx;
	height:68rpx;
	background:#F8F8F8;
	border-radius:34rpx;
	font-size:28rpx;
  text-align: center;
}

.organizationList {
	margin-top: 20rpx;
	padding-top: 108rpx;
	padding-bottom: 180rpx;
}
.list {
	padding: 0 0 0 40rpx;
	background: #FFFFFF;
}

.list-item {
	height:120rpx;
	display: flex;
	align-items: center;
	justify-content: space-between;
	border-bottom: 1rpx solid #E8E9EB;
}
.list-item:last-child {
	border: none;
}
.name {
	width: 450rpx;
	font-size:28rpx;
	font-weight:400;
	color:#282828;
	line-height:36rpx;
}
.radio {
  width:45rpx;
  height:45rpx;
  line-height: 45rpx;
  text-align: center;
  border-radius: 50%;
  border: 1rpx solid #BCBCBC;
  display: inline-block;
  transform: scale(0.8);
  font-size: 20rpx;
  font-weight: 500;
  margin-right: 30rpx;
}
.radio-checked {
  border: 1rpx solid #652791;
  background: #652791;
  color: white;
}

.h11 {
	font-size:36rpx;
	font-weight:bold;
	color:rgba(40,40,40,1);
	line-height: 1;
	max-width: 450rpx;
}

.h22 {
	width: 450rpx;
	font-size: 28rpx;
	line-height: 36rpx;
	color:rgba(98,98,98,1);
	margin: 15rpx 0;
}

.h222 {
	width: 450rpx;
	font-size: 28rpx;
	line-height: 36rpx;
	color:#282828;
	margin: 15rpx 0;
}

.h22 .strong{
	display: inline;
	color: rgba(101,39,145,0.8);
}

.h11 .strong{
	display: inline;
	color: rgba(101,39,145,0.8);
	font-size:26rpx;
}

.list-item1 {
	position: relative;
	border-top: 50rpx solid white;
}
.list-item2 {
	position: relative;
	border-bottom: 1rpx solid #E8E9EB;
	display: flex;
	height: 120rpx;
	align-items: center;
	justify-content: space-between;
	border-bottom: 1rpx solid #E8E9EB;
	margin-bottom: 50rpx;
}

.input110{
	width: 100%;
	padding: 0 40rpx;
	height: 70rpx;
	background: #F8F8F8;
	border-radius: 34rpx;
	font-size: 28rpx;
	text-align: left;
	box-sizing: border-box;
	margin: 0 20rpx;
}
