
.button-save {
  height:88rpx;
  line-height: 88rpx;
  background:rgba(101,39,145,1);
  border-radius:48px;
  font-size:32rpx;
  font-weight:400;
  color:rgba(255,255,255,1);
  margin-left: 12rpx;
  flex-grow: 1;
	background:rgba(101,39,145,1);
	border-radius:48rpx;
}

.footer {
  height:148rpx;
  background:rgba(255,255,255,1);
  box-shadow:0rpx -1rpx 0rpx 0rpx rgba(206,215,220,1);
  position: fixed;
  left: 0;
  bottom: 0;
  width: 100%;
  box-sizing: border-box;
  padding: 30rpx 85rpx;
  display: flex;
}

.ul {
	margin: 20rpx auto 168rpx auto;
}

.li {
	background:rgba(255,255,255,1);
	position: relative;
  padding: 32rpx 40rpx;
  box-sizing: border-box;
  overflow: hidden;
}

.li:after {
	position: absolute;
	left: 70rpx;
	right: 70rpx;
	bottom: 0;
	height: 1px;
	background:#E8E9EB;
	content: '';
	display: block;
}

.li:last-child:after {
	display: none;
}

.logo-box {
	width:120rpx;
	height:120rpx;
	box-shadow:0rpx 2rpx 12rpx 0rpx rgba(0,0,0,0.12);
	border:2rpx solid rgba(232,233,235,1);
	border-radius: 50%;
	display: inline-block;
	overflow: hidden;
	float: left;
	margin-right: 32rpx;
}

.logo-box image {
	width: 100%;
	height: 100%;
}

.edit-box {
	display: inline-block;
	position: absolute;
	top: 38rpx;
	right: 30rpx;
	color: #652791;
}

.content {
	width: calc(100% - 220rpx);
	float: left;
	box-sizing: border-box;
}

.first {
	line-height: 1;
	overflow: hidden;
	max-width: 450rpx;
	overflow: hidden;
	text-overflow: ellipsis;
	white-space: nowrap;
	margin-top: 16rpx;
}

.strong {
	font-size:36rpx;
	font-weight:500;
	color:rgba(40,40,40,1);
	display: inline-block;
	margin-right: 16rpx;
}

.tips {
	font-size:28rpx;
	font-weight:300;
	color:rgba(40,40,40,1);
	display: inline-block;
	border-left: 1px solid #E8E9EB;
	padding-left: 16rpx;
}

.second {
	font-size:24rpx;
	font-weight:300;
	color:rgba(40,40,40,1);
	padding: 8rpx 18rpx;
	background: #F8F8F8;
	max-width: 450rpx;
	margin-top: 16rpx;
	line-height: 1.5;
	position: relative;
	display: inline-block;
	word-wrap:break-word;
}

.second:before {
	width: 0;
  height: 0;
  position: absolute;
  top: -20rpx;
  left: 30rpx;
  border-width: 10rpx;
  border-style: solid;
  border-color: transparent transparent #F8F8F8 transparent;
  display: block;
  content: '';
}

.label{
	position: absolute;
	top: 50%;
	transform: translateY(-50%);
	right: 40rpx;
	width:132rpx;
	height:46rpx;
	background:rgba(239,233,244,1);
	border-radius:100rpx;
	font-size:24rpx;
	color:rgba(101,39,145,1);
	line-height:26rpx;
	line-height: 46rpx;
	text-align: center;
}

.company-product .content{
	padding-right: 130rpx;
}

.myRadio {
  width:36rpx;
  height:36rpx;
  position: relative;
  display: inline-block;
  border-radius: 50%;
  border: 1px solid #BCBCBC;
  line-height: 36rpx;
  text-align: center;
  box-sizing: border-box;
  position: absolute;
  top: 50%;
  right: 25rpx;
  transform: translate(-50%, -50%);
}

.myRadio.active {
  background: #652791;
  color: white;
  border: unset;
}

.myRadio.active .icon{
  font-size: 24rpx;
  display:inline-block;
  transform:translateY(-4rpx);
}