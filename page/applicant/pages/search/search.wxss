
.search-box {
	width: 100%;
	padding: 20rpx 0;
	background: #fff;
  box-sizing: border-box;
  height: 108rpx;
}

.search-bar {
	width:calc(100vw - 144rpx);
	height:68rpx;
	background:#F8F8F8;
	border-radius:34rpx;
	float: left;
	padding: 0 70rpx;
	box-sizing: border-box;
	position: relative;
  margin-left: 40rpx;
}
.search-bar.edit {
  width: 488rpx;
}
.search-bar .search-input {
	width: 100%;
	height: 100%;
	font-size:28rpx;
	color:#282828;
}
.searchBtn {
	float: right;
	font-size:28rpx;
	color:#282828;
  line-height: 68rpx;
  padding-left: 22rpx;
  width: 104rpx;
  box-sizing: border-box;
}
.searchIcon {
	color: #C7C2C2;
	font-size: 24rpx;
	position: absolute;
	top: 22rpx;
	left: 30rpx;
}

.resetIcon {
	color: #C7C2C2;
	font-size: 26rpx;
	position: absolute;
	top: 0rpx;
	right: 0rpx;
  padding: 22rpx 28rpx 22rpx 16rpx;
  line-height: 1;
  display: block;
}

.historyArea, .hotArea {
	margin: 40rpx;
  font-size: 0;
  max-height: 372rpx;
  overflow: hidden;
}

.historyArea .title {
	margin-bottom: 24rpx;
  font-size:28rpx;
	color:#929292;
	line-height:36rpx;
  position: relative;
}

.historyArea .title text{
	font-weight:700;
}

.title .remove {
  font-size: 32rpx;
  color: #BCBCBC;
  position: absolute;
  padding: 10rpx;
  top: -10rpx;
  right: -10rpx;
}
.record {
	padding: 0 30rpx;
	height: 58rpx;
	line-height: 56rpx;
	font-size:26rpx;
	color:#929292;
	margin-right: 20rpx;
	margin-bottom: 26rpx;
	border-radius:29rpx;
	border:1rpx solid rgba(205,203,207,1);
  font-weight: normal;
  max-width: 670rpx;
  display: inline-block;
  font-size:26rpx;
  color:rgba(146,146,146,1);
  box-sizing: border-box;
}

.match-box-ul {
	position: absolute;
	left: 0;
	right: 0;
	background: white;
	z-index: 1;
	overflow: hidden;
	transition: all ease .4s;
	opacity: 1;
}

.match-box-ul.show {
	bottom: 0;
	opacity: 1;
}

.match-box-ul .li {
	height:108rpx;
	line-height: 108rpx;
	background:rgba(255,255,255,1);
	padding: 0 40rpx;
	position: relative;
	font-size:28rpx;
	font-weight:400;
	color:rgba(98,98,98,1);
	position: relative;
	overflow: hidden;
}

.match-box-ul .li:after {
	content: '';
	display: block;
	position: absolute;
	left: 40rpx;
	right: 40rpx;
	bottom: 0;
	height: 1px;
	background: #E8E9EB;
}

.match-box-ul .icon-jiantou {
	float: right;
	color: #DCDCDC;
	position: absolute;
	right: 40rpx;
	top: 50%;
	transform: translateY(-50%);
	font-size: 17rpx;
}

.list-box .ul{
  box-sizing: border-box;
  width: 100%;
  padding: 0 30rpx 20rpx;
}
.list-box .li{
  padding: 40rpx 40rpx 37rpx 40rpx;
  box-sizing: border-box;
  width: 100%;
  background-color: #FFF;
  margin: 20rpx 0;
  position: relative;
  box-shadow:0rpx 0rpx 40rpx 0rpx rgba(22,39,77,0.1);
  border-radius:16rpx;
}
.list-box .li::after {
  content: '';
  width: calc(100% - 80rpx);
  height: 1rpx;
  background: #E8E9EB;
  position: absolute;
  left: 40rpx;
  bottom: 0;
}
.list-box .ul .formIdBtn:last-child .li {
  margin-bottom: 0;
}
.list-box .ul .formIdBtn:last-child .li::after {
  display: none;
}

.list-box .li .name{
  display: flex;
  justify-content: space-between;
  align-items: center;
  font-size: 32rpx;
  font-weight:600;
  color: #354048;
}
.list-box .li .name .title {
  max-width: 300rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  font-size:32rpx;
  font-weight:500;
  color:rgba(40,40,40,1);
  line-height:32rpx;
}
.list-box .li .name .salary{
  color: #FF7F4C;
  font-weight:bold;
  font-size:32rpx;
  line-height:32rpx;
}
.list-box .li .company{
  font-size: 26rpx;
  color: #5C565D;
  font-weight:400;
  line-height:26rpx;
  margin-top: 16rpx;
}
.list-box .li .labelList{
  display: flex;
  margin-top: 16rpx;
}
.list-box .li .labelList .label{
  line-height: 24rpx;
  padding: 10rpx 12rpx;
  font-size: 24rpx;
  font-weight: 400;
  background-color: #F8F8F8;
  color: #929292;
  border-radius: 4rpx;
  margin-right: 16rpx;
}
.list-box .hr{
  display: flex;
  margin-top: 15rpx;
  align-items: center;
  justify-content: space-between;
  height: 66rpx;
}
.list-box .hr .hrImg{
  width: 52rpx;
  height: 52rpx;
  background-color: #ccc;
  border-radius: 50%;
  margin-right: 16rpx;
  overflow: hidden;
}
.list-box .hr .hrImg image{
  width: 100%;
  height: 100%;
  display: block;
}
.list-box .hr .conLeft {
  height: 52rpx;
  display: flex;
  box-sizing: border-box;
}
.list-box .hr .logo {
  width: 66rpx;
  height: 66rpx;
  display: block;
  box-shadow:0rpx 8rpx 20rpx 0rpx rgba(45,45,45,0.06);
  border-radius:6rpx;
  border:1rpx solid rgba(251,251,255,1);
}
.list-box .hr .hrName{
  font-size: 24rpx;
  font-weight: 400;
  color: #5C565D;
  align-items: center;
  max-width: 400rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  line-height: 52rpx;
}

