.search-box{
	background:rgba(255,255,255,1);
	box-shadow:0rpx 0rpx 20rpx 0rpx rgba(50,14,59,0.08);
	position: fixed;
	left: 0;
	right: 0;
	padding: 16rpx 30rpx 24rpx 30rpx;
	height: 108rpx;
	box-sizing: border-box;
}

.search-box .search {
	height:68rpx;
	background:rgba(248,248,248,1);
	border-radius:34rpx;
	width: 100%;
	text-align: center;
}

.formIdBtn {
  padding: 0;
  background: none;
  text-align: left;
  line-height: normal;
  overflow: unset;
  margin: 24rpx 0;
}

.formIdBtn::after {
  display: none;
}

.item2 {
	background:rgba(255,255,255,1);
	position: relative;
	height: 120rpx;
	padding: 0 32rpx 0 40rpx;
	line-height: 120rpx;
	overflow: hidden;
	text-overflow: ellipsis;
	white-space: nowrap;
	max-width: 100%;
	font-size:36rpx;
	font-weight:700;
	color:rgba(40,40,40,1);
}

.search-ul{
	padding-top: 128rpx;
	padding-bottom: 148rpx;
}

.button-submit {
	height:88rpx;
	background:#F5F4F7;
	border-radius:48rpx;
	font-size:32rpx;
	color:#CDCBCF;
	text-align: center;
	line-height: 88rpx;
}

.button-enable {
	background:rgba(101,39,145,1);
	box-shadow:0rpx 20rpx 18rpx 0rpx rgba(101,39,145,0.2);
	color:rgba(255,255,255,1);
}

.footer {
	position: fixed;
	left: 0;
	right: 0;
	bottom: 0;
	background: #FBFBFF;
	background:rgba(255,255,255,1);
	box-shadow:0rpx -1rpx 0rpx 0rpx rgba(206,215,220,1);
	opacity:0.96;
	padding: 30rpx 100rpx;
}


.myRadio {
  width:34rpx;
  height:34rpx;
  position: relative;
  display: inline-block;
  border-radius: 50%;
  border: 1px solid #BCBCBC;
  line-height: 34rpx;
  text-align: center;
  box-sizing: border-box;
  position: absolute;
  top: 50%;
  right: 32rpx;
  transform: translateY(-50%);
}

.myRadio.active {
  background: #652791;
  color: white;
  border: unset;
}

.myRadio.active .icon{
  font-size: 22rpx;
  display:inline-block;
  transform:translateY(-6rpx);
}