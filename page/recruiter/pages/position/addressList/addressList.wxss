
.addressList .ul {
  padding-bottom: 172rpx;
  overflow: hidden;
  margin-top: 20rpx;
}

.addressList .li {
  position: relative;
  overflow: hidden;
  padding: 34rpx 30rpx 34rpx 30rpx;
  background: white;
  display: flex;
  justify-content: center;
  align-items: center;
  height: 148rpx;
  box-sizing: border-box;
}

.addressList .li:after {
  position: absolute;
  left: 30rpx;
  right: 0;
  content: '';
  display: block;
  bottom: 0;
  height: 1px;
  background: #E8E9EB;
}

.addressList .li:last-child:after {
  display: none;
}

.addressList .radio {
  width:45rpx;
  height:45rpx;
  line-height: 45rpx;
  text-align: center;
  border-radius: 50%;
  border: 1px solid #BCBCBC;
  display: inline-block;
  transform: scale(0.8);
  font-size: 20rpx;
  font-weight: 500;
  margin-right: 30rpx;
}

.addressList .radio-checked {
  border: 1px solid #652791;
  background: #652791;
  color: white;
}

.addressList .left {
  text-align: center;
  position: relative;
}
.addressList .right {
  width: 145rpx;
  height: 100%;
  font-size:26rpx;
  font-weight:500;
  color:rgba(101,39,145,1);
  text-align: right;
  position: relative;
}
.addressList .center {
  flex: 1;
  font-size: 28rpx;
  font-weight: 500;
  color: #626262;
  line-height: 36rpx;
  display: inline-block;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
}

.addressList .button-submit {
  height:88rpx;
  background:rgba(101,39,145,1);
  border-radius:48px;
  font-size:32rpx;
  font-weight:400;
  color:rgba(255,255,255,1);
}

.addressList .footer {
  height:148rpx;
  background:rgba(255,255,255,1);
  box-shadow:0rpx -1rpx 0rpx 0rpx rgba(206,215,220,1);
  position: fixed;
  left: 0;
  bottom: 0;
  width: 100%;
  box-sizing: border-box;
  padding: 30rpx 100rpx;
}

.addressList .edit {
  position: absolute;
  top: 50%;
  right: 0;
  transform: translateY(-50%);
}