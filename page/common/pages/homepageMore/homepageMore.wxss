
.title {
  font-size:28rpx;
  font-weight:500;
  color:rgba(98,98,98,1);
  padding-top: 40rpx;
  margin-left: 40rpx;
}

.title .icon {
  width: 24rpx;
  height: 28rpx;
  padding: 6rpx 0 0 6rpx;
  background: #EFE9F4;
  display: inline-block;
  box-sizing: border-box;
  margin-right: 21rpx;
}
.title .fan {
  width: 24rpx;
  height: 28rpx;
  border: 2rpx solid #652791;
  box-sizing: border-box;
}
.production-box {
  margin: 24rpx 30rpx;
  background: white;
  background:rgba(255,255,255,1);
  box-shadow:0px 4rpx 20rpx 0rpx rgba(101,39,145,0.1);
  border-radius:10rpx;
  overflow: hidden;
}

.production-box .li {
  padding: 40rpx;
  background: white;
  position: relative;
}

.production-box .base {
  overflow: hidden;
  display: flex;
  position: relative;
}

.production-box .li .img-box {
  width:120rpx;
  height:120rpx;
  box-shadow:0rpx 2rpx 12rpx 0rpx rgba(0,0,0,0.12);
  border-radius: 50%;
  margin-right: 30rpx;
  position: relative;
  overflow: hidden;
}

.production-box .li image {
  width:120rpx;
  height:120rpx;
}

.production-box .li .content {
  flex: 1;
}

.production-box .li .row-one {
  overflow: hidden;
  line-height: 1;
  margin-top: 15rpx;
  text-align: left;
}

.production-box .li .username {
  font-size:36rpx;
  font-weight:500;
  color:rgba(40,40,40,1);
}

.production-box .li .recruitment-number {
  font-size:28rpx;
  font-weight:300;
  color:rgba(40,40,40,1);
  margin-top: 12rpx;
  line-height: 30rpx;
}

.production-box .li .row-two {
  font-size:24rpx;
  font-weight:300;
  color:rgba(40,40,40,1);
  margin-top: 25rpx;
  overflow: hidden;
  background:#F9F7FA;
  line-height: 30rpx;
  padding: 18rpx;
  border-radius: 10rpx;
  text-align: left;
}

.production-box .li::after {
  content: '';
  display: block;
  height: 2rpx;
  left: 40rpx;
  right: 40rpx;
  background: #E8E9EB;
  position: absolute;
  top: 99%;
}

.production-box .li:last-child::after {
  display: none;
}

.company-address {
  margin: 24rpx 30rpx;
  background: white;
  background:rgba(255,255,255,1);
  box-shadow:0px 4rpx 20rpx 0rpx rgba(101,39,145,0.1);
  border-radius:10rpx;
  overflow: hidden;
}

.company-address .map {
  height:218rpx;
  margin: 40rpx 30rpx 0 30rpx;
  border-radius: 10rpx;
  overflow: hidden;
  border: 1px solid #CED7DC;
  box-sizing: border-box;
  position: relative;
  z-index: 1;
}

.company-address map {
  width: 100%;
  height: 100%;
}

.company-address .li {
  height: 114rpx;
  line-height: 114rpx;
  padding-right: 0 40rpx;
  margin-bottom: 5rpx;
  margin: 0 40rpx;
  font-size:26rpx;
  font-weight:300;
  color:rgba(40,40,40,1);
  position: relative;
}

.company-address .li:after {
  content: '';
  display: block;
  height: 1px;
  background: #E8E9EB;
  display: block;
  position: absolute;
  left: 0;
  right: 0;
  bottom: 0;
}

.company-address .li:last-child:after {
  display: none;
}

.company-address .footer .icon-dizhi {
  color: #5C565D;
}

.company-address .text {
  max-width:501rpx;
  font-size:26rrpx;
  font-weight:300;
  color:rgba(40,40,40,1);
  text-overflow: ellipsis;
  overflow: hidden;
  white-space: nowrap;
  display: inline-block;
  vertical-align: middle;
}

.company-address .icon-dizhi {
  vertical-align: middle;
  margin-right: 18rpx;
}

.company-address .li .icon-xiangyou {
  float: right;
  color: #BACED8;
}
.company-website {
  margin:0 30rpx;
  background: white;
  background:rgba(255,255,255,1);
  box-shadow:0px 4rpx 20rpx 0rpx rgba(101,39,145,0.1);
  border-radius:10rpx;
  overflow: hidden;
}

.company-website .link-box {
  /*line-height: 1;*/
  padding: 40rpx;
  margin-bottom: 40rpx;
}

.company-website .link-box .link {
  font-size:32rpx;
  font-weight:300;
  color:rgba(40,40,40,1);
  display: inline-block;
  float: left;
  max-width: 70%;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.company-website .link-box .button {
  font-size:26rpx;
  font-weight:400;
  color:rgba(101,39,145,1);
  display: inline-block;
  float: right;
}