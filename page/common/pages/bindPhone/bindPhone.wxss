.bindPhone .img {
  width: 100%;
}
.bindPhone {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  min-height: 100vh;
  background: #fff;
}
.bindPhone .msg {
  width: 100%;
  position: absolute;
  top: 236rpx;
  text-align: center;
}
.bindPhone .msg .title {
  font-size: 56rpx;
  font-weight: 700;
  color: #fff;
  line-height: 56rpx;
}

.bindPhone .msg .h11 {
  color: #fff;
  color:rgba(255,255,255,1);
  letter-spacing: 4rpx;
  font-size:72rpx;
  font-weight:700;
  color:rgba(0,196,205,1);
  line-height: 1;
}

.bindPhone .msg .h44 {
  margin-top: 34rpx;
  letter-spacing: 2rpx;
  font-size:36rpx;
  color:rgba(86,93,93,1);
  line-height:1;
}

.bindPhone .msg .txt {
  font-size: 32rpx;
  font-weight: 500;
  color: #fff;
  line-height: 32rpx;
  margin-top: 22rpx;
}
.bindPhone .phoneInput, .inputBox {
  width: 100%;
  height: 98rpx;
  background: #fff;
  box-sizing: border-box;
  font-size: 28rpx;
  color: #282828;
}
.inputBox .codeInput {
  width: 60%;
  height: 100%;
}
.code {
  margin-top: 32rpx;
  position: relative;
}
.voiceCode {
  color: #652791;
}
.code .sendBtn {
  text-align: center;
  line-height: 98rpx;
  border-radius: 30rpx;
  font-size: 28rpx;
  font-weight: 700;
  color: #00C4CD;
  right: 40rpx;
  top: 0;
  position: absolute;
  z-index: 10;
}
.code .sendBtn.wait {
  color: 652791;
}
.form {
  padding: 40rpx 85rpx 0;
}
.tip {
  width: 100%;
  text-align: center;
  color: #929292;
  margin-top: 43rpx;
  font-size: 26rpx;
  font-weight: 400;
  line-height: 37rpx;
}
.wxBtn {
  position:absolute;
  bottom:56rpx;
  left:0;
  width:100%;
  text-align:center;
}
.btnInner {
  display: flex;
  height: 46rpx;
  line-height: 46rpx;
  font-size:28rpx;
  color:#565D5D
}
.wxBtn .icon {
  width: 46rpx;
  height: 46rpx;
  border-radius: 50%;
  background:rgba(0,194,95,0.08);
  display: flex;
  align-items: center;
  justify-content: center;
  margin-right: 16rpx;
}
.icon1 {
  font-size: 30rpx;
  margin-left: 4rpx;
  color: #CDCBCF;
}
.btnInner .icon-xiangyou{
  font-size: 30rpx;
  position: relative;
  top: 1rpx;
  color:#565D5D
}
.wxBtn .icon .iconfont {
  font-size: 26rpx;
  color:rgba(0,194,95,0.7);
}
.wxLogin {
  text-align: center;
  display: inline-block;
  background: none;
  line-height: 46rpx;
  vertical-align: middle;
}
.wxLogin::after{border:none}

.bindBtn {
  height: 88rpx;
  color: #fff;
  line-height: 88rpx;
  margin-top: 94rpx;
  position: relative;
}

.login {
  height: 88rpx;
  background: rgba(0,196,205,0.6);
  border-radius: 48rpx;
  font-size: 32rpx;
  font-weight: 400;
  color: #fff;
  line-height: 88rpx;
}

.login.active {
  background:rgba(0,196,205,1);
  box-shadow:0rpx 20rpx 30rpx 0rpx rgba(27,194,202,0.35);
}

.forget{
  font-size:24rpx;
  color:rgba(146,146,146,1);
  position: absolute;
  right: 23rpx;
  line-height: 1;
  top: -72rpx;
  line-height: 32rpx;
}
.sms-login{
  height:28rpx;
  font-size:26rpx;
  color:rgba(0,196,205,1);
  line-height:28rpx;
  bottom: -62rpx;
  position: absolute;
  left: 50%;
  transform: translateX(-50%);
}
.bindBtn.noClick {
  background: #F5F4F7;
  color: #CDCBCF;
  box-shadow: none;
}
.userAgreement {
  width: 100%;
  text-align: center;
  font-size:24rpx;
  font-weight:300;
  color:#5C565D;
  line-height:24rpx;
  padding-top: 40rpx;
  position: fixed;
  bottom: 48rpx;
  left: 0;
}
.userAgreement .btn {
  color: #652791;
}
.codePic {
  width:162rpx;
  height:64rpx;
  border:1rpx solid rgba(232,233,235,1);
  position: absolute;
  top: 50%;
  margin-top: -32rpx;
  right: 22rpx;
}

.li {
  width: 100%;
  height: 98rpx;
  border: 1rpx solid #DADFE0;
  background: #fff;
  box-sizing: border-box;
  padding: 0 0 0 40rpx;
  border-radius: 50rpx;
  overflow: hidden;
  position: relative;
}

.li .icon-close{
  position: absolute;
  top: 50%;
  transform: translateY(-50%);
  z-index: 2;
  right: 0;
  color: #BCBCBC;
  font-size: 30rpx;
  line-height: 98rpx;
  padding-right: 46rpx;
}

.li .myeyes{
  position: absolute;
  top: 50%;
  transform: translateY(-50%);
  z-index: 2;
  right: 0;
  color: #BCBCBC;
  font-size: 30rpx;
  line-height: 98rpx;
  padding-right: 46rpx;
}