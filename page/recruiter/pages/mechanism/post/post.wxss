.mechanism-post .footer {
  height:148rpx;
  background:rgba(255,255,255,1);
  box-shadow:0rpx -1rpx 0rpx 0rpx rgba(206,215,220,1);
  position: fixed;
  left: 0;
  bottom: 0;
  width: 100%;
  box-sizing: border-box;
  padding: 30rpx 85rpx;
  display: flex;
}

.mechanism-post .ul {
  margin: 24rpx auto 18rpx auto;
  overflow: hidden;
}

.mechanism-post .li {
  padding: 28rpx 40rpx;
  position: relative;
  background: white;
  min-height: 122rpx;
  box-sizing: border-box;
}

.mechanism-post .flex-box {
  display: flex;
  justify-content: center;
  align-items: center;
  box-sizing: border-box;
  min-height: 122rpx;
}

.mechanism-post .li:after {
  position: absolute;
  left: 40rpx;
  right: 40rpx;
  bottom: 0;
  height: 1px;
  background: #E8E9EB;
  content: '';
  display: block;
}


.mechanism-post .li:last-child:after {
  display: none;
}

.mechanism-post .key {
	font-size:28rpx;
	font-weight:300;
	color:rgba(53,57,67,1);
}

.mechanism-post .value {
	position: relative;
	flex: 1;
}

.mechanism-post .icon-xiangyou {
	position: absolute;
	top: 50%;
	transform: translateY(-50%);
	right: 0;
	color: #E8E9EB;
}

.mechanism-post .logo {
	width:140rpx;
	height:140rpx;
	box-shadow:0rpx 8rpx 20rpx 0rpx rgba(45,45,45,0.06);
	border-radius:70rpx;
	margin-right: 50rpx;
	float: right;
	position: relative;
	overflow: hidden;
}

.mechanism-post input {
	font-size:28rpx;
	font-weight:700;
	color:rgba(40,40,40,1);
	text-align: right;
}

.mechanism-post textarea {
	font-size:24rpx;
	font-weight:500;
	color:rgba(40,40,40,1);
	text-align: left;
	height: 114rpx;
	width: 100%;
	line-height: 1.5;
	padding-top: 10rpx;
}

.mechanism-post .calc-box {
	height:24rpx;
	font-size:24rpx;
	font-weight:300;
	color:rgba(178,182,194,1);
	line-height:24rpx;
	text-align: right;
}

.mechanism-post .placeholder-image {
	position: absolute;
	left: 0;
	top: 0;
	width: 100%;
	height: 100%;
	border-radius: 50%;
	z-index: 1;
}

.mechanism-post .upload-image {
	position: absolute;
	left: 0;
	top: 0;
	width: 100%;
	height: 100%;
	border-radius: 50%;
	z-index: 2;
}

.mechanism-post .red {
	color: red;
}

.mechanism-post .text {
	font-size: 28rpx;
	font-weight: 700;
	color: rgba(40,40,40,1);
	text-align: right;
	margin-right: 40rpx;
}

.mechanism-post .default {
	font-size: 28rpx;
	font-weight: 700;
	text-align: right;
	color:#929292;
	font-size: 28rpx;
}