  position: relative;
}
.sexBox .sex-item.active {
  color: #fff;
}
.sexBox .sex-item.active .icon::after {
  width: 12rpx;
  height: 12rpx;
  content: '';
  display: block;
  top: 50%;
  left: 50%;
  transform: translate3d(50%, 50%, 0);
  background: #fff;
  border-radius: 50%;
}

.micro.active .animation.btn {
	margin-top: 106rpx;
}
.micro .myPicker {
	max-width: 167rpx;
	padding: 0 20rpx;
