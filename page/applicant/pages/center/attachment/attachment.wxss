
.attachment .ul {
	overflow: hidden;
	margin: 0 80rpx;
}

.attachment .label {
	width:140rpx;
	height:58rpx;
	background:rgba(255,220,41,1);
	border-radius:29rpx 35rpx 35rpx 0rpx;
	font-size:30rpx;
	font-weight:400;
	color:rgba(40,40,40,1);
	text-align: center;
	line-height: 58rpx;
}

.attachment .value {
	line-height: 1.5;
	white-space: pre-wrap;
	font-size:28rpx;
	font-weight:500;
	color:rgba(40,40,40,1);
	line-height:40rpx;
	margin-top: 16rpx;
}

.attachment .li {
	margin-bottom: 64rpx;
	position: relative;
}

.attachment .li:last-child {
	margin-bottom: 0rpx;
}

.attachment .footer {
	position: fixed;
	left: 0;
	right: 0;
	bottom: 0;
	background: white;
}

.attachment .p {
	font-size:26rpx;
	font-weight:400;
	color:rgba(98,98,98,1);
	margin-bottom: 32rpx;
	text-align: center;
	height: 37rpx;
	line-height: 37rpx;
}

.button {
	height:90rpx;
	background:rgba(101,39,145,1);
	box-shadow:0rpx 16rpx 30rpx 0rpx rgba(101,39,145,0.3);
	border-radius:48rpx;
	line-height: 90rpx;
	text-align: center;
	font-size:32rpx;
	font-weight:400;
	color:rgba(255,255,255,1);
	margin: 0 80rpx 90rpx;
}

.attachment .img {
	width:262rpx;
	height:198rpx;
	display: inline-block;
	margin-top: 90rpx;
}

.attachment .infos {
	text-align: center;
}

.attachment .none {
	text-align: center;
	margin-bottom: 120rpx;
}

.attachment .has {
	text-align: center;
	margin-bottom: 60rpx;
}

.attachment .tips {
	text-align: center;
	font-size:32rpx;
	font-weight:500;
	color:rgba(101,39,145,1);
	line-height: 1;
	margin-top: 33rpx;
}

.attachment .item {
	background:rgba(255,255,255,1);
	border-bottom: 1px solid #E8E9EB;
	border-top: 1px solid #E8E9EB;
	padding: 40rpx 0;
	box-sizing: border-box;
	display: flex;
  justify-content: center;
  align-items: center;
}

.attachment .img-box {
	width:100rpx;
	height:100rpx;
	background:rgba(250,57,57,1);
	border-radius:10rpx;
	overflow: hidden;
	margin-right: 20rpx;
}

.attachment .img-box image{
	width: 100%;
	height: 100%;
	margin: 0;
}

.attachment .content {
	flex: 1;
}

.attachment .arrow-box {
	flex: 1;
}

.attachment .attach-box {
	margin: 0 40rpx;
	padding-bottom: 273rpx;
}

.attachment .filename {
	font-size:28rpx;
	font-weight:500;
	color:rgba(40,40,40,1);
	line-height: 36rpx;
	margin-bottom: 10rpx;
	max-width:450rpx;
	overflow: hidden;
	text-overflow: ellipsis;
	white-space: nowrap;
	display: inline-block;
}

.attachment .date {
	font-size:26rpx;
	font-weight:300;
	color:rgba(98,98,98,1);
	line-height: 1;
}

.attachment .icon-xiangyou {
	color: #CED7DC;
}

.attachment .bg {
	position: fixed;
	bottom: 0;
	left: 0;
	right: 0;
	background: white;
	z-index: -1;
}