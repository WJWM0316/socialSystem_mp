@import '../../../iconfont.wxss'

.over-layout {
	background:rgba(0,0,0,0.6);
	position: fixed;
	left: 0;
	top: 0;
	right: 0;
	bottom: 0;
	z-index: 10000000000;
}

.over-layout .box{
	background:rgba(255,255,255,1);
	border-radius:18rpx;
	position: absolute;
	left: 50rpx;
	top: 50%;
	right: 50rpx;
	transform: translateY(-50%);
	padding: 60rpx 50rpx 56rpx 50rpx;
}

.close-button {
	position: absolute;
	right: 0;
	top: 0;
	color: #CDCBCF;
	padding: 25rpx;
}
.over-layout .label {
	width:140rpx;
	height:58rpx;
	background:rgba(255,220,41,1);
	border-radius:29rpx 35rpx 35rpx 0rpx;
	font-size:30rpx;
	font-weight:400;
	color:rgba(40,40,40,1);
	text-align: center;
	line-height: 58rpx;
}

.over-layout .value {
	line-height: 1.5;
	white-space: pre-wrap;
	font-size:28rpx;
	font-weight:500;
	color:rgba(40,40,40,1);
	line-height:40rpx;
	margin-top: 16rpx;
	white-space:nowrap;
}

.over-layout .dt {
	/*margin-bottom: 64rpx;*/
	position: relative;
}

.over-layout .dt:last-child {
	margin-bottom: 0rpx;
}

.over-layout .text {
	color: #652791;
}

.over-layout .h1 {
	height:36rpx;
	font-size:36rpx;
	font-weight:500;
	color:rgba(53,57,67,1);
	line-height:1;
	text-align: center;
	margin-bottom: 56rpx;
}

.scan-button {
	height:90rpx;
	background:rgba(101,39,145,1);
	box-shadow:0rpx 16rpx 30rpx 0rpx rgba(101,39,145,0.3);
	border-radius:48rpx;
	line-height: 90rpx;
	text-align: center;
	font-size:32rpx;
	font-weight:400;
	color:rgba(255,255,255,1);
	margin-top: 48rpx;
}

.marginB24 {
	margin-bottom: 24rpx;
}

.position-post .marginB24:after {
	display: none;
}

.input-box {
	background:rgba(239,233,244,0.8);
	border-radius:16rpx;
	border:1rpx solid rgba(239,233,244,1);
	margin: 32rpx 35rpx 40rpx 35rpx;
	position: relative;
	box-sizing: border-box;
	padding: 12rpx 16rpx;
}

.input-box .input{
	background:rgba(255,255,255,1);
	border-radius:12rpx;
	font-size:32rpx;
	font-weight:500;
	color:rgba(101,39,145,1);
	padding-left: 24rpx;
	width: calc(100% - 100rpx);
	line-height: 56rpx;
	height: 56rpx;
}

.input-box .icon-sousuo{
	position: absolute;
	top: 50%;
	transform: translateY(-50%);
	right: 30rpx;
	color: #652791;
	font-size: 30rpx;
}