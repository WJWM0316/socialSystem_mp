.warp{
  box-sizing: border-box;
  width: 100%;
  padding: 0 40rpx;
}
.commont{
  box-sizing: border-box;
  display: flex;
  align-items: center;
  justify-content: space-between;
  width: 100%;
  height: 122rpx;
  font-size: 28rpx;
  color: #353943;
  border-bottom: 1px solid #E8E9EB;
}
.commont .result{
  display: flex;
  align-items: center;
  justify-content: center;
}
.commont .result input{
  text-align: right;
}
.commont text{
  color: #282828;
  line-height: 122rpx;
  margin-right: 10rpx;
}
.bottom{
  display: flex;
  justify-content: space-between;
  align-items: center;
  font-size: 24rpx;
  color: #652791;
}
.bottom .example i{
  margin-right: 12rpx;
}
