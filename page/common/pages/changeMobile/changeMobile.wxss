.bindPhone {
  position: relative;
  background: #fff;
  min-hieght: 100vh;
}
.head {
	text-align: center;
	margin: 82rpx 0 0;
}
.head .mobiletips {
	font-size: 28rpx;
	font-weight: 400;
	color: #652791;
	line-height: 40rpx;
}
.myMoBile {
	margin-top: 24rpx;
	font-size: 55rpx;
	font-weight:bold;
	color: #652791;
	line-height: 71rpx;
}
.bindPhone .msg {
  width: 100%;
  position: absolute;
  top: 230rpx;
  text-align: center;
}
.bindPhone .msg .title {
  font-size: 56rpx;
  font-weight: 700;
  color: #fff;
  line-height: 56rpx;
}
.bindPhone .msg .txt {
  font-size: 32rpx;
  font-weight: 500;
  color: #fff;
  line-height: 32rpx;
  margin-top: 22rpx;
}
.bindPhone input {
  
}
.code, .phone {
  margin-top: 32rpx;
  width: 100%;
  height: 98rpx;
  border: 1rpx solid #E8E9EB;
  background: #F7F9FC;
  box-sizing: border-box;
  padding: 0 20rpx 0 40rpx;
  border-radius: 50rpx;
  font-size: 28rpx;
  color: #A59CB6;
  position: relative;
}
.phone {
  margin-top: 0;
}
input {
  width: 65%;
  height: 100%;
  background: none;
  border: none;
}
.voiceCode {
  color: #652791;
}
.code .sendBtn {
  width: 162rpx;
  height: 60rpx;
  text-align: center;
  line-height: 60rpx;
  background: #652791;
  border-radius: 30rpx;
  font-size: 24rpx;
  font-weight: 500;
  color: #fff;
  right: 20rpx;
  top: 50%;
  margin-top: -30rpx;
  position: absolute;
  z-index: 10;
}
.code .sendBtn.wait {
	color: #BCBCBC;
	background: #E8E9EB;
}
.form {
  padding: 48rpx 100rpx 0;
}
.tip {
  width: 100%;
  text-align: center;
  color: #929292;
  margin-top: 43rpx;
  font-size: 26rpx;
  font-weight: 400;
  line-height: 37rpx;
}
.tip {
  font-size: 28rpx;
  font-weight: 500;
  color: #626262;
  line-height: 28rpx;
  margin-top: 215rpx;
  text-align: center;
}
.icon {
  display: inline-block;
  margin-left: 8rpx;
}
.bindBtn {
  width: 550rpx;
  height: 88rpx;
  background: #652791;
  box-shadow: 0rpx 20rpx 18rpx 0rpx rgba(101,39,145,0.2);
  border-radius: 48rpx;
  font-size: 32rpx;
  font-weight: 400;
  color: #fff;
  line-height: 88rpx;
  margin-top: 41rpx;
}

.footer {
	width: 100%;
	position: fixed;
	left: 0;
	bottom: 92rpx;
}