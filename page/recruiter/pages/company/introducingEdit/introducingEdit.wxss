.company-introdution .edit-box {
	height:460rpx;
	position: relative;
	padding: 18rpx 40rpx;
	box-sizing: border-box;
	margin-top: 24rpx;
	background: white;
}

.company-introdution textarea{
	font-size:28rpx;
	font-weight:400;
	color:#282828;
	line-height:40rpx;
	width: 100%;
	height: calc(100% - 58rpx);
}

.company-introdution .controls {
	overflow: hidden;
	height: 30rpx;
	line-height: 1;
	position: absolute;
	bottom: 28rpx;
	left: 40rpx;
	right: 40rpx;
}

@import '../../../../../iconfont.wxss';

.company-introdution .controls .similarity {
	font-size:24rpx;
	font-weight:400;
	color:rgba(101,39,145,1);
	float: left;
}

.company-introdution .controls .sum {
	float: right;
	font-size:24rpx;
	font-weight:400;
	color:rgba(178,182,194,1);
}

.company-introdution .controls .red {
	color:red
}

.company-introdution .button-save {
  height:88rpx;
  background:rgba(101,39,145,1);
  border-radius:48px;
  font-size:32rpx;
  font-weight:400;
  color:rgba(255,255,255,1);
  margin-left: 12rpx;
  flex-grow: 1;
	background:rgba(101,39,145,1);
	border-radius:48rpx;
	text-align: center;
	line-height: 88rpx;
}

.company-introdution .footer {
  height:148rpx;
  background:rgba(255,255,255,1);
  box-shadow:0rpx -1rpx 0rpx 0rpx rgba(206,215,220,1);
  position: fixed;
  left: 0;
  bottom: 0;
  width: 100%;
  box-sizing: border-box;
  padding: 30rpx 85rpx;
  display: flex;
}