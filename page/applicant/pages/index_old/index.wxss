.more{
  background-color: #FFFFFF;
  margin: -138rpx 30rpx 0 30rpx;
  border-radius: 10rpx;
  box-shadow:0px 8px 22px 0px rgba(34,56,101,0.08);
  position: relative;
}

.index-bannar image {
  width: 100%;
  height: 430rpx;
  vertical-align: text-top;
  position: relative;
  border-top: 20rpx solid #652791;
  display: block;
}

.ul-tab-bar {
  display: flex;
  line-height: 80rpx;
  border-bottom: 1rpx solid rgba(243,233,249,1);
}

.default {
  padding: 0 30rpx;
  background: #FBFBFF;
  padding-top: 36rpx;
  z-index: 222;
}

.fixed {
  position: fixed;
  left: 0;
  right: 0;
  padding-top: 24rpx;
}

.ul-tab-bar .li {
  flex-grow: 1;
  font-size:28rpx;
  font-weight:400;
  color:rgba(188,188,188,1);
  text-align: center;
  position: relative;
  background:rgba(243,245,248,1);
}

.ul-tab-bar .li:first-child {
  border-top-left-radius: 10rpx;
}

.ul-tab-bar .li:last-child {
  border-top-right-radius: 10rpx;
}

.ul-tab-bar .li:before {
  content: '';
  display: block;
  position: absolute;
  left: 50%;
  transform: translateX(-50%);
  bottom: -28rpx;
  width: 0;
  height: 0;
  border-width:16rpx;
  border-style: solid;
  border-color: rgba(243,233,249,1) transparent transparent transparent;
  display: block;
  content: '';
  opacity: 0;
  visibility: hidden;
  transition: all ease .2s;
  z-index: 2;
}

.ul-tab-bar .li:after {
  content: '';
  display: block;
  position: absolute;
  left: 50%;
  transform: translateX(-50%);
  bottom: -30rpx;
  width: 0;
  height: 0;
  border-width:16rpx;
  border-style: solid;
  border-color: rgba(243,233,249,1) transparent transparent transparent;
  display: block;
  content: '';
  opacity: 0;
  visibility: hidden;
  transition: all ease .4s;
  z-index: 1;
}

.ul-tab-bar .active {
  font-weight:500;
  color:#652791;
  background:rgba(243,233,249,1);
  pointer-events: none;
}

.ul-tab-bar .active:before {
  opacity: 1;
  visibility: visible;
}

.ul-tab-bar .active:after {
  opacity: 1;
  visibility: visible;
}

.jump {
  width: 430rpx;
  height: 98rpx;
  background:rgba(255,220,41,1);
  box-shadow:0rpx 4rpx 20rpx 0rpx rgba(232,201,40,0.47);
  border-radius:49rpx;
  margin: 44rpx auto 0;
  font-size:30rpx;
  font-weight:400;
  color:rgba(40,40,40,1);
  line-height: 98rpx;
}

.nodata {
  background:rgba(255,255,255,1);
  box-shadow:0rpx 8rpx 20rpx 0rpx rgba(34,56,101,0.08);
  border-radius:10rpx;
  margin:0 30rpx;
  overflow: hidden;
}