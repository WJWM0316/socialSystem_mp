}*/

.company-post .entry-list .icon-xiangyou {
  color: #CED7DC;
  position: absolute;
  right: 40rpx;
  top: 50%;
  transform: translateY(-50%);
}

.company-post .entry-list .btn-area {
	margin-top: 24rpx;
}

.company-post .entry-list .exemple {
	font-size:24rpx;
	font-weight:400;
	color:rgba(98,98,98,1);
	line-height:38rpx;
	padding: 0 40rpx;
	margin: 24rpx 0;
}

.company-post .entry-list .link .defaultColor{
  color: #BCBCBC;
}

.button-submit {
	background:#F5F4F7;
	border-radius:48rpx;
	font-size:32rpx;
	font-weight:400;
	color:#CDCBCF;
	text-align: center;
	line-height: 88rpx;
	height:88rpx;
}

.button-enable {
	background:rgba(101,39,145,1);
	box-shadow:0rpx 20rpx 18rpx 0rpx rgba(101,39,145,0.2);
	color:rgba(255,255,255,1);
}

.company-post .icon-tixing {
	font-size: 30rpx;
	margin-right: 10rpx;
}

.company-post .color {
	color: #626262 !important;
}

.company-post .entry-list .upload {
	height:140rpx;
	padding: 32rpx 40rpx;
}

.company-post .entry-list .logo-box {
	width: calc(100% - 140rpx);
	float: left;
	text-align: right;
}

.company-post .entry-list .logo {
	width:140rpx;
	height:140rpx;
	border-radius:18rpx;
	display: inline-block;
	margin-right: 40rpx;
	overflow: hidden;
}

.company-post  .logo image{
	width:140rpx;
	height:140rpx;
}

.company-post .entry-list .self {
	padding-right: 40rpx;
}

.picker-box {
	position: absolute;
	top: 0;
	left: 160rpx;
	height: 100%;
	right: 40rpx;
	overflow: hidden;
	text-align:right;
	margin-right:35rpx;
	opacity: 0;
}

.company-post .entry-list .picker-box .value{
	width: 100%;
	height: 100%;
}

.picker-box picker {
	position: absolute;
	left: 0;
	right: 0;
	bottom: 0;
	top: 0;
}

.btn-area {
	position: fixed;
	left: 0;
	right: 0;
	bottom: 0;
	background: white;
	box-sizing: border-box;
	padding: 30rpx 100rpx;
}

.company-post .entry-list .wid {
	width: calc(100% - 180rpx);
}

.company-post {
	padding-bottom: 172rpx;
}