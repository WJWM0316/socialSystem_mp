
.category-list {
	margin-top: 20rpx;
}

.category-list .li {
	background: white;
	line-height: 98rpx;
	font-size:28rpx;
	font-weight:400;
	position: relative;
	padding-left: 40rpx;
}

.category-list .li:after {
	content: '';
	display: block;
	left: 40rpx;
	right: 0;
	bottom: 0;
	height: 1rpx;
	background: #E8E9EB;
}

.category-list .li:last-child:after {
	display: none;
}

.category-list .text {
	display: inline-block;
	font-size:28rpx;
	font-weight:400;
	color:rgba(40,40,40,1);
}

.category-list .active {
	color: #652791;
}

.category-list .icon-xiangyou {
  float: right;
  color: #CED7DC;
  margin-right: 40rpx;
}

.category-list .btn-area {
	margin-top: 24rpx;
}

.button-enable {
	background: green;
}

.search-box {
	z-index: 10000;
	position: relative;
	display: block;
	height:120rpx;
	line-height: 80rpx;
	font-size:28rpx;
	font-weight:500;
	color:rgba(40,40,40,1);
	padding: 20rpx 40rpx;
	position: fixed;
	background: white;
	border: 1rpx solid #E8E9EB;
	width: 100%;
	box-sizing: border-box;
}

.search-box input {
	height: 80rpx;
	line-height: 80rpx;
	background: #F8F8F8;
	border-radius:41rpx;
	padding: 0 40rpx;
}

.search-box .icon-search {
	position: absolute;
	right: 80rpx;
	top: 50%;
	transform: translateY(-50%);
	color: #BCBCBC;
}
.hotArea {
	width: 100%;
	padding: 28rpx 47rpx 4rpx;
	font-size: 0;
	background: #fff;
  box-sizing: border-box;
}
.hotArea .hotArea-item {
	padding: 0 30rpx;
  height: 58rpx;
	font-size:26rpx;
	font-weight:300;
	color: #626262;
	line-height:58rpx;
	border:1rpx solid rgba(205,203,207,1);
	box-sizing: border-box;
	border-radius:29rpx;
	margin: 0 18rpx 24rpx 0;
	display: inline-block;
}
.hotArea .hotArea-item.cur {
	color: #652791;
	border-color: #652791;
}
.mask-board {
	position: fixed;
	right: 0;
	bottom: 0;
	z-index: 10;
	opacity: 0;
	background: rgba(0,0,0,.6);
	visibility: hidden;
	transition: all ease .2s;
}

.mask-board .left{
	position: absolute;
	bottom: 0;
	width: 116rpx;
	z-index: 10;
	opacity: 0;
	background: tranparent;
	z-index:0;
	left: 0;
	top: 120rpx;
}

.mask-board .box {
	position: relative;
	width: calc(100% - 116rpx);
	margin-left: 116rpx;
	height: calc(100% - 120rpx);
	margin-top: 120rpx;
	display: flex;
	transition: all ease .2s;
	transform: translate(100%);
	z-index: 11;
}

.mask-board .column {
	flex: 1;
}

.mask-board .second {
	background: #F8F8F8;
	overflow: hidden;
	overflow-y: scroll;
}

.mask-board .third {
	background: white;
	overflow: hidden;
	overflow-y: scroll;
}

.mask-board .item {
	height: 104rpx;
	line-height: 104rpx;
	font-size:28rpx;
	font-weight:400;
	color:rgba(92,86,93,1);
	text-align: center;
	position: relative;
	transition: all ease .2s;
  overflow: hidden;
  text-overflow:ellipsis;
  white-space: nowrap;
}

.mask-board .active {
	font-size:28rpx;
	font-weight:bold;
	color:rgba(132,82,167,1);
	background: white;
}

.mask-board .second .active:before {
	width:8rpx;
	height:40rpx;
	background:rgba(132,82,167,1);
	border-radius:0rpx 100rpx 100rpx 0px;
	content: '';
	display: block;
	position: absolute;
	left: 0;
	top: 50%;
	transform: translateY(-50%);
}

.mask-board-show {
	left: 0;
	opacity: 1;
	visibility: visible;
}

.mask-board-show .box {
	transform: translateX(0%);
}

.search-item {
	height:126rpx;
	background:rgba(255,255,255,1);
	position: relative;
	overflow: hidden;
	padding: 30rpx 40rpx;
	box-sizing: border-box;
	line-height: 1;
	font-size:26rpx;
	font-weight:500;
	color:rgba(40,40,40,1);
}

.search-item:after {
	position: absolute;
	left: 40rpx;
	right: 40rpx;
	bottom: 0;
	display: block;
	content: '';
	height: 1px;
	background: #E8E9EB;
}

.search-item:last-child:after {
	display: none;
}

.search-item .icon-jiantou {
	font-size: 18rpx;
	color: #DCDCDC;
	line-height: 66rpx;
	position: absolute;
	top: 50%;
	transform: translateY(-50%);
	right: 40rpx;
}

.search-item .first {
	color:#282828;
	margin-bottom: 16rpx;
}

.search-item .second {
	color:#929292;
}

.icon-wancheng {
	font-weight: 400;
}