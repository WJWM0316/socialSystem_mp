
.address-post .input-li {
	height:122rpx;
	background:rgba(255,255,255,1);
	background: white;
	display: flex;
	padding: 0 40rpx;
	line-height: 122rpx;
	position: relative;
}

.address-post .input-li .icon-xiangyou {
	float: right;
}

.address-post .input-li:after {
	content: '';
	display: block;
	background: #E8E9EB;
	position: absolute;
	left: 40rpx;
	right: 0;
	height: 1px;
	bottom: 0;
}

.address-post .address{
	display: inline-block;
	max-width:520rpx;
	font-size:28rpx;
	font-weight:400;
	color:rgba(40,40,40,1);
	overflow: hidden;
	text-overflow: ellipsis;
	white-space: nowrap;
}

.address-post .clear-bottom:after {
	display: none;
}

.address-post .input-li .key {
	font-size:28rpx;
	font-weight:400;
	color:rgba(98,98,98,1);
	width: 156rpx;
}

.address-post .input-li .value {
	flex: 1;
	font-size:28rpx;
	font-weight:400;
	color:rgba(40,40,40,1);
	text-align: left;
}

.address-post .input-li .icon-xiangyou {
	float: right;
	color: #CED7DC;
}

.address-post .input-li input {
	height: 100%;
}

.address-post .button-save {
  height:88rpx;
  background:rgba(101,39,145,1);
  border-radius:48px;
  font-size:32rpx;
  font-weight:400;
  color:rgba(255,255,255,1);
  margin-left: 12rpx;
  flex-grow: 1;
	background:rgba(101,39,145,1);
	border-radius:48rpx;
}

.address-post .button-delete {
  height:88rpx;
  background:rgba(101,39,145,1);
  border-radius:48px;
  font-size:32rpx;
  font-weight:400;
  color:rgba(255,255,255,1);
  margin-right: 12rpx;
	background:rgba(188,188,188,1);
	border-radius:48rpx;
	flex-grow: 1;
}

.address-post .footer {
  height:148rpx;
  background:rgba(255,255,255,1);
  box-shadow:0rpx -1rpx 0rpx 0rpx rgba(206,215,220,1);
  position: fixed;
  left: 0;
  bottom: 0;
  width: 100%;
  box-sizing: border-box;
  padding: 30rpx 85rpx;
  display: flex;
}