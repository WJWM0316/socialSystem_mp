	text-align: center;
	line-height: 50rpx;
	font-size:28rpx;
	font-weight:900;
	color:rgba(101,39,145,1);
}

.certification-layout .img-box {
	width:50rpx;
	height:50rpx;
	margin-right: 22rpx;
}

.certification-layout .text {
	flex: 1;
}

