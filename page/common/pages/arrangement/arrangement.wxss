.arrangement {
  background: #FBFBFF;
  padding-bottom: 148rpx;
  min-height: 100vh;
  box-sizing: border-box;
}
.tip {
  padding: 0 50rpx;
  height: 80rpx;
  display: flex;
  align-items: center;
  background: #FFFCF0;
  font-size: 28rpx;
  font-weight: 300;
  color: #FF7F4D;
  line-height: 80rpx;
}
.headInfo {
  padding: 24rpx 30rpx 0;
}
.content {
  padding: 24rpx 30rpx;
}
.roleDetail, .detail, .date, .realDate {
  border-radius: 10rpx;
  box-shadow: 0rpx -5rpx 40rpx 0rpx rgba(22,39,77,0.05);
  background: #fff;
}
.date {
  margin-top: 24rpx;
}
.title {
  padding: 28rpx 0 8rpx;
  font-size: 32rpx;
  font-weight: bold;
  color: #282828;
  line-height: 32rpx;
}
.title .icon {
  width: 8rpx;
  height: 40rpx;
  background: #FFDC29;
  border-radius: 0rpx 100rpx 100rpx 0rpx;
  display: inline-block;
  vertical-align:sub;
  margin-right: 22rpx;
}
.title .newTip {
  font-size: 26rpx;
  font-weight: 400;
  color: #626262;
  margin-left: 24rpx;
  line-height: 24rpx;
}
.detail .msgItem {
  padding: 0 32rpx 0 30rpx;
}
.detail .inner {
  border-bottom: 1rpx solid #E8E9EB;
  font-size: 28rpx;
  font-weight: 500;
  line-height: 108rpx;
  height: 108rpx;
  display: flex;
  align-items: center;
  position: relative;
}
.detail .inner.noborder {
  border-bottom: none;
}
.detail .msgItem.jump .inner{
  padding: 0 44rpx 0 0;
}
.detail .inner .txt {
  width: 144rpx;
  flex-basis: 144rpx;
  color: #929292;
  display: inline-block;
  font-weight: 500;
}
.detail .inner .msg {
  color: #5C565D;
  overflow: hidden;
  line-height: 40rpx;
  align-items: center;
  flex: 1;
  text-overflow:ellipsis;
  white-space: nowrap;
}
.detail .inner .msg.noWrap {
  white-space: normal;
}
.detail .inner .msg input {
  font-size: 28rpx;
}
.detail .inner .icon {
  font-size: 32rpx;
  position: absolute;
  right: 0rpx;
  color: #D3CFD6;
}
.detail .inner .iconfont.icon1 {
  display: inline-block;
  font-size: 34rpx;
  color: #DCDCDC;
  margin-right: 20rpx;

  position:absolute;
  left:0rpx;
  top:0;

}
.detail .inner .phone {
  color: #652791;
}
.dateItem {
  padding: 0 32rpx 0 30rpx;
}
.dateItem .inner {
  height: 108rpx;
  line-height: 108rpx;
  border-bottom: 1rpx solid #E8E9EB;
  overflow: hidden;
}
.read .inner {
  border: none;
}
.read.detail {
  padding-bottom: 46rpx;
}
.read.detail .inner {
  height: auto;
  line-height: inherit;
  margin-top: 52rpx;
}
.read.detail .inner:first-child {
  margin-top: 44rpx;
}
.read.detail .inner .msg {
  padding-left: 54rpx;
  padding-right: 30rpx;
}

.dateItem .inner.noborder {
  border: none;
}
.dateItem .inner .txt {
  font-size: 28rpx;
  font-weight: 300;
  color: #929292;
  float: left;
}
.dateItem .inner .msg {
  font-size: 26rpx;
  font-weight: 500;
  color: #652791;
  float: right;
}
.dateItem .inner .msg .add {
  font-weight:700;
  font-size: 38rpx;
  font-weight:700;
  margin-right:7rpx;
  line-height: 26rpx;
  height: 26rpx;
  display: inline-block;
  overflow: hidden;
}
.dateItem .inner .removeIcon {
  width: 30rpx;
  height: 30rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  background: #ED5C5C;
  border-radius: 50%;
  position: absolute;
  top: 50%;
  margin-top: -15rpx;
  left: 0;
}
.dateItem .inner .removeIcon .icon1 {
  width: 14rpx;
  height: 3rpx;
  background: #fff;
}
.xuhao {
  display: inline-block;
  font-size: 28rpx;
  font-weight: 500;
  color: #929292;
  float: left;
  width: 121rpx;
}
.dateDetail {
  font-size: 28rpx;
  font-weight: 400;
  color: #282828;
  float: left;
}
.edit.dateDetail {
  width: 100%;
  padding-left: 60rpx;
  box-sizing: border-box;
  height: 108rpx;
  line-height: 108rpx;
}
.dateDetail.choseDate {
  color: #652791;
}
.dateItem .inner {
  position: relative;
}
.dateItem .inner.sure {
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.radioBtn {
  transform: scale(0.7);
}
.dateItem .inner .icon {
  font-size: 32rpx;
  position: absolute;
  right: 0rpx;
  top: 50%;
  transform: translateY(-70%);
  color: #D3CFD6;
}
.dateItem:last-child .inner {
  border-bottom: none;
}
.radio-group label .sure {
  border-bottom: 1rpx solid #E8E9EB;
}
.radio-group label:last-child .sure {
  border-bottom: none;
}
.btnBox {
  width: 100%;
  box-sizing: border-box;
  padding: 30rpx 100rpx;
  background: #fff;
  position: fixed;
  left: 0;
  bottom: 0;
  box-shadow:0rpx -1rpx 0rpx 0rpx rgba(206,215,220,1);
}
.btnBox .btn {
  height: 88rpx;
  background: #652791;
  font-size: 32rpx;
  font-weight: 400;
  color: #fff;
  line-height: 88rpx;
  box-shadow: 0rpx 20rpx 18rpx 0rpx rgba(101,39,145,0.2);
  border-radius: 48rpx;
}
.btnBox1 {
  width: 100%;
  box-sizing: border-box;
  padding: 20rpx 26rpx;
  background: #fff;
  position: fixed;
  left: 0;
  bottom: 0;
}
.btnBox1 .txt {
  line-height: 84rpx;
  font-size: 28rpx;
  font-weight: 400;
  color: #626262;
}
.btnBox1 .btn {
  width: 218rpx;
  height: 84rpx;
  background: #652791;
  border-radius: 48rpx;
  float: right;
  font-size: 32rpx;
  font-weight: 400;
  color: #fff;
  line-height: 84rpx;
}
.btnBox1 .btn_01 {
  width: 240rpx;
  height: 80rpx;
  background: #652791;
  border-radius: 0 48rpx 48rpx 0;
  float: right;
  font-size: 32rpx;
  font-weight: 400;
  color: #fff;
  line-height: 80rpx;
}
.btnBox1 .btn_02 {
  width: 204rpx;
  height: 80rpx;
  background: #EFE9F4;
  border-radius: 48rpx 0 0 48rpx;
  float: right;
  font-size: 32rpx;
  font-weight: 400;
  color: #652791;
  line-height: 80rpx;
}
.realDate {
  margin-top: 20rpx;
  padding: 78rpx 0;
}
.realDate.wait {
  padding: 56rpx 0 40rpx;
}
.realDate .txt1 {
  text-align: center;
  font-size: 36rpx;
  font-weight: bold;
  color: #282828;
  line-height: 36rpx;
}
.realDate .txt2 {
  text-align: center;
  font-size: 24rpx;
  font-weight: 400;
  color: #626262;
  line-height: 24rpx;
  margin-top: 16rpx;
}
.realDate .txt3 {
  text-align: center;
  font-size: 64rpx;
  font-weight: 700;
  color: #652791;
  line-height: 64rpx;
  margin-top: 54rpx;
}
.realDate .txt3.end {
  color: #BCBCBC;
}
.realDate .pic {
  width: 340rpx;
  height: 240rpx;
  margin: 58rpx auto 0;
  display: block;
}

.inappropriate {
  padding: 70rpx 0 56rpx;
}
.inappropriate .pic {
  width: 340rpx;
  height: 240rpx;
  display: block;
  margin: 30rpx auto 28rpx;
}
.inappropriate .btn {
  width:430rpx;
  height:88rpx;
  background:rgba(255,220,41,1);
  box-shadow:0rpx 20rpx 18rpx 0rpx rgba(255,220,41,0.1);
  border-radius:49rpx;
  font-weight:500;
  color:rgba(40,40,40,1);
  line-height: 88rpx;
  margin: 0 auto;
  font-size: 30rpx;
  text-align: center;
}
.recruiter-waiting {
  margin-top: 20rpx;
  padding: 30rpx;
  text-align: center;
  background: white;
  background:rgba(255,255,255,1);
  box-shadow:0rpx -5rpx 40rpx 0rpx rgba(22,39,77,0.05);
  border-radius:10rpx;
}

.recruiter-waiting .h1 {
  height:36rpx;
  font-size:36rpx;
  font-weight:bold;
  color:rgba(40,40,40,1);
  line-height:36rpx;
  padding-top: 26rpx;
}

.recruiter-waiting .h2 {
  height:33rpx;
  font-size:24rpx;
  font-weight:400;
  color:rgba(98,98,98,1);
  line-height:33rpx;
  margin-top: 12rpx;
}

.clock_show {
  width: 220rpx;
  height: 206rpx;
  margin-top: 32rpx;
}

.interview-result-box {
  background: white;
  margin-top: 20px;
  box-shadow:0rpx -5rpx 40rpx 0rpx rgba(22,39,77,0.05);
  border-radius:16rpx;
  overflow: hidden;
}

.interview-result-box .arrive-status {
  font-size:32rpx;
  font-weight:700;
  color:rgba(92,86,93,1);
  line-height:1;
  padding-left: 68rpx;
  position: relative;
  margin-top: 80rpx;
}

.interview-result-box .arrive-status:before {
  display: block;
  width:12rpx;
  height:12rpx;
  background:rgba(92,86,93,1);
  border-radius: 50%;
  content: '';
  background: #5C565D;
  position: absolute;
  top: 50%;
  transform: translateY(-50%);
  left: 40rpx;
}

.interview-result-box .btn-list_1 {
  height: 88rpx;
  margin: 34rpx 40rpx 30rpx 36rpx;
  line-height: 88rpx;
}

.interview-result-box .btn-list_2 {
  height: 88rpx;
  margin: 34rpx 40rpx 74rpx 36rpx;
  line-height: 88rpx;
}

.interview-result-box .img {
  height: 88rpx;
  width: 88rpx;
  border-radius: 50%;
  display: inline-block;
  position: absolute;
  left: 0;
  top: 0;
}

.interview-result-box .img image{
  width: 96rpx;
  height: 96rpx;
  position: absolute;
  left: 50%;
  top: 50%;
  transform: translate(-50%, -50%);
}

.interview-result-box .btn-list_1 .txt {
  display: inline-block;
  font-size:28rpx;
  color:rgba(40,40,40,1);
  margin-left: 100rpx;
}

.interview-result-box .btn-list_2 .txt {
  display: inline-block;
  font-size:28rpx;
  color:rgba(40,40,40,1);
  margin-left: 126rpx;
}

.interview-result-box .btn {
  height:88rpx;
  background:rgba(248,245,250,1);
  border-radius:44rpx;
  width: 290rpx;
  display: inline-block;
  position: relative;
}

.interview-result-box .btn01 {
  float: left;
}

.interview-result-box .btn02 {
  float: right;
}

.interview-result-box .tips {
  height:66rpx;
  font-size:24rpx;
  font-weight:300;
  color:rgba(146,146,146,1);
  line-height:33rpx;
  margin: 0 46rpx 48rpx 40rpx;
}

.interview-result-box .sad-icon {
  width: 148rpx;
  height: 148rpx;
  border-radius: 50%;
  margin: 20rpx auto 26rpx auto;
}

.interview-result-box .sad-icon image{
  width: 100%;
  height: 100%;
}

.interview-result-box .comment_1 {
  font-size:32rpx;
  color:rgba(40,40,40,1);
  line-height:1;
  text-align: center;
}

.interview-result-box .comment_2 {
  font-size:24rpx;
  font-weight:300;
  color:rgba(146,146,146,1);
  text-align: center;
  margin-top: 16rpx;
  margin-bottom: 50rpx;
}

.interview-result-box .comment_2 .strong{
  font-weight:700;
  color: #652791
}

.interview-result-box .comment_3{
  font-size:24rpx;
  color:rgba(101,39,145,1);
  line-height:1;
  text-align: center;
  margin-top: 18rpx;
  margin-bottom: 48rpx;
}

.interview-result-box .comment_3 text{
  font-size:24rpx;
  color:rgba(101,39,145,1);
  line-height:1;
  text-align: center;
  margin-top: 18rpx;
  margin-bottom: 48rpx;
  margin: 0 19rpx;
}