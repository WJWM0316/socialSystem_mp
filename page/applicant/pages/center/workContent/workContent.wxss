.textArea{
  width: 100%;
  height: 460rpx;
  margin-top: 24rpx;
  background-color: #fff;
  padding: 20rpx 40rpx;
  font-size: 28rpx;
  font-weight: 400;
  box-sizing: border-box;
  line-height: 36rpx;
}
.textArea textarea{
  width: 100%;
  height: 372rpx;
}
.placeholder{
  padding: 20rpx 40rpx;
  font-size: 28rpx;
  font-weight: 400;
  line-height: 36rpx;
  color: #BCBCBC;
}
.bottom{
  display: flex;
  justify-content: space-between;
  align-items: center;
  font-size: 24rpx;
  color: #652791;
}
.bottom .example i{
  margin-right: 12rpx;
}
.popups{
  margin-top: 24rpx;
  box-sizing: border-box;
  padding: 0 30rpx;
}
.popups .top{
  display: flex;
  justify-content: space-between;
  align-items: center;
  font-size: 26rpx;
  margin-bottom: 20rpx;
}
.popups .top image{
  width: 56rpx;
  height: 56rpx;
  border-radius: 50%;
  margin-right: 8rpx;
  background-color: #ccc;
}
.popups .top .nameBox{
  display: flex;
  align-items: center;
  color: #282828;
  font-weight: 500;
}
.popups .top .change{
  color: #652791;
}
.popups .top .change i{
  margin-right: 9rpx;
}
.popups .content{
  position: relative;
  padding: 24rpx 30rpx;
  font-size: 26rpx;
  font-weight: 400;
  color: #626262;
  line-height: 36rpx;
  background-color: #FFF;
  border-radius: 10rpx;
  border:1px solid rgba(232,233,235,1);
}
.popups .content .corner{
  width: 32rpx;
  height: 21rpx;
  overflow: hidden;
  position: absolute;
  top: -20rpx;
  left: 50rpx;
  z-index: 1;
}
.popups .content .corner image{
 width: 100%; 
 height: 100%;
}
.sendBtn{
  width: 550rpx;
  height: 88rpx;
  background-color: #652791;
  box-shadow:0px 20px 30px 0px rgba(101,39,145,0.2);
  text-align: center;
  line-height: 88rpx;
  color: #FFF;
  font-size: 32rpx;
  font-weight: 400;
  border-radius: 48rpx;
  position: fixed;
  left: 50%;
  margin-left: -275rpx;
  bottom: 30rpx;
}
