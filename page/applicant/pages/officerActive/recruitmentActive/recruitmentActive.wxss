.recruitmentActive{
  min-height: 100vh;
}
.recruitmentActive .tabBar{
  margin-bottom: 20rpx;
  height: 88rpx;
  width: 100%;
  background-color: #FFFFFF;
  display: flex;
  align-items: center;
  justify-content: center;
  position: fixed;
  left: 0;
  right: 0;
  z-index: 2;
}
.list-box {
  margin-top: 108rpx;
}

.recruitmentActive .tabBar text{
  font-size: 32rpx;
  color: #BCBCBC;
  font-weight: 400;
  display: inline-block;
  height: 100%;
  margin-right: 146rpx;
  position: relative;
  line-height: 88rpx;
}
.recruitmentActive .tabBar text:nth-of-type(2){
  margin-right: 0;
}
.recruitmentActive .tabBar .active{
  font-weight: 500;
  color: #282828;
}
.recruitmentActive .tabBar .active::after{
  width: 50rpx;
  height: 8rpx;
  background-color: #FFDC29;
  content: '';
  display: block;
  position: absolute;
  bottom: 0;
  left: 50%;
  transform: translateX(-50%);
}
.more{
  padding: 0 30rpx;
}
.jump {
  width: 430rpx;
  height: 98rpx;
  background:rgba(255,220,41,1);
  box-shadow:0rpx 4rpx 20rpx 0rpx rgba(232,201,40,0.47);
  border-radius:49rpx;
  margin: 44rpx auto 0;
  font-size:30rpx;
  font-weight:400;
  color:rgba(40,40,40,1);
  line-height: 98rpx;
}
.list {
  padding:0 30rpx;
  margin-top:18rpx;
}

.li-item {
  background:rgba(255,255,255,1);
  box-shadow:0rpx 8rpx 20rpx 0rpx rgba(34,56,101,0.08);
  border-radius:10rpx;
  margin: 18rpx 30rpx;
  overflow: hidden;
  padding: 30rpx 40rpx;
  display: flex;
}

.li-item .img-box {
  width:120rpx;
  height:120rpx;
  box-shadow:0rpx 2rpx 12rpx 0rpx rgba(0,0,0,0.12);
  border:2rpx solid rgba(232,233,235,1);
  border-radius: 50%;
}