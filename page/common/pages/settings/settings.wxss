.settings {
	background: #FAFCFF;
}
.changePhone, .toggle {
	display: flex;
	justify-content: space-between;
	padding-left: 40rpx;
	background: #fff;
	position: relative;
}
.changePhone {
	margin-top: 24rpx;
}
.txt {
	font-size: 28rpx;
	font-weight: 400;
	color: #353943;
	line-height: 28rpx;
	padding: 46rpx 40rpx 46rpx 0;
	width: 100%;
	box-sizing: border-box;
}
.mobile {
	display: block;
}
.icon {
	position: absolute;
	font-size: 32rpx;
	right: 40rpx;
	top: 50%;
	transform: translateY(-50%);
	color: #E8E9EB;
}
.upLogin {
	width: 100%;
	background: #fff;
	color: #ED5C5C;
	height: 120rpx;
	line-height: 120rpx;
	font-size: 32rpx;
	text-align: center;
	font-weight: 400;
	margin-top: 24rpx;
}