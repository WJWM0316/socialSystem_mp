@import '../../../iconfont.wxss'
.msg {
  font-size: 28rpx;
  /*margin-top: 36rpx;*/
  font-weight: 300;
  color: #626262;
  line-height: 48rpx;
}
.expContent .msg {
  margin-top: 0;
}
.shrink {
  height: 143rpx;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 3;
  overflow: hidden;
}
.openbtn {
  font-size: 26rpx;
  font-weight: 400;
  color: #652791;
  line-height: 26rpx;
  margin-top: 24rpx;
  height: 26rpx;
  display: flex;
  align-items: center;
}
.openbtn .icon {
  width: 30rpx;
  height: 30rpx;
  line-height: 30rpx;
  font-size: 30rpx;
  color: #652791;
  font-weight: 300;
  margin-left: 10rpx;
}
.openbtn .icon.shrink {
  transform: rotate(180deg);
}