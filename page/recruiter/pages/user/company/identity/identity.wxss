.button-submit {
	background:#F5F4F7;
	border-radius:48rpx;
	border: 1px solid #F5F4F7;
	font-size:32rpx;
	font-weight:400;
	color:#CDCBCF;
	text-align: center;
	line-height: 88rpx;
	height:88rpx;
	margin: 30rpx 100rpx;
}

.button-enable {
	background:rgba(101,39,145,1);
