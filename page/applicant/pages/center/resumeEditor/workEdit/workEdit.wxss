/*工作内容*/
.textArea{
  width: 100%;
  /*height: 150rpx;*/
  background-color: #fff;
  padding: 20rpx 40rpx;
  font-size: 28rpx;
  font-weight: 400;
  box-sizing: border-box;
  line-height: 36rpx;
  border: 1rpx solid #E8E9EB;
}
.textArea textarea{
  width: 100%;
  height: 150rpx;
}
.placeholder{
  padding: 20rpx 0;
  font-size: 28rpx;
  font-weight: 400;
  line-height: 36rpx;
  color: #BCBCBC;
}
.placeholder .icon {
  color: #BCBCBC;
}
.bottom{
  display: flex;
  justify-content: space-between;
  align-items: center;
  font-size: 24rpx;
  color: #652791;
}
.bottom .example i{
  margin-right: 12rpx;
}
.popups{
  margin-top: 24rpx;
  box-sizing: border-box;
  padding: 0 30rpx;
}
.popups .top{
  display: flex;
  justify-content: space-between;
  align-items: center;
  font-size: 26rpx;
  margin-bottom: 20rpx;
}
.popups .top image{
  width: 56rpx;
  height: 56rpx;
  border-radius: 50%;
  margin-right: 8rpx;
  background-color: #ccc;
}
.popups .top .nameBox{
  display: flex;
  align-items: center;
  color: #282828;
  font-weight: 500;
}
.popups .top .change{
  color: #652791;
}
.popups .top .change i{
  margin-right: 9rpx;
}
.popups .content{
  position: relative;
  padding: 24rpx 30rpx;
  font-size: 26rpx;
  font-weight: 400;
  color: #626262;
  line-height: 36rpx;
  background-color: #FFF;
  border-radius: 10rpx;
  border:1px solid rgba(232,233,235,1);
}
.popups .content .corner{
  width: 32rpx;
  height: 21rpx;
  overflow: hidden;
  position: absolute;
  top: -20rpx;
  left: 50rpx;
  z-index: 1;
}
.popups .content .corner image{
 width: 100%; 
 height: 100%;
}

.saveBox {
  width: 100%;
  box-sizing: border-box;
  padding: 29rpx 85rpx;
  display: flex;
  justify-content: space-between;
  background: #fff;
  position: fixed;
  bottom: 0;
  left: 0;
}
.save {
  width: 100%;
  height: 90rpx;
  line-height: 90rpx;
  font-weight:400;
  color:#fff;
  display: block;
  background: #652791;
  text-align: center;
  border-radius: 48rpx;
  font-size: 32rpx;
}
.saveAgain {
  box-sizing: border-box;
  width: 308rpx;
  display: block;
}
.delete{
  width: 248rpx;
  background-color: #BCBCBC;
}
.labelTxt {
  margin-left: 10rpx;
}