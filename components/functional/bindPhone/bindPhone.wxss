@import '../../../iconfont.wxss'
.bindPhone {
  width: 100%;
  height: 100vh;
  position: fixed;
  top: 0;
  left: 0;
  background: rgba(0,0,0,0.7);
  z-index: 10;
}
.tip {
  font-size:36rpx;
  font-weight: 500;
  color: #353943;
  line-height: 36rpx;
  margin: 0 0 70rpx;
  text-align: center;
}
.colse {
  width: 50rpx;
  height: 50rpx;
  position: absolute;
  top: 14rpx;
  right: 14rpx;
  text-align: center;
  line-height: 50rpx;
  font-size: 30rpx;
}
.bindPhone .inner {
  width: 650rpx;
  height: 430rpx;
  padding: 60rpx 50rpx 56rpx;
  box-sizing: border-box;
  background: #fff;
  border-radius: 18rpx;
  position: relative;
  top: 452rpx;
  left: 50rpx;
}
.wxBtn {
  width: 550rpx;
  height: 88rpx;
  background: #1AAD19;
  border-radius: 49rpx;
  margin: 0 auto;
  font-size: 32rpx;
  font-weight: 500;
  color: #fff;
  line-height: 88rpx;
}
.plogin {
  width: 550rpx;
  height: 88rpx;
  background: #F7F9FC;
  border-radius: 49rpx;
  border: 1rpx solid #E8E9EB;
  margin: 0 auto;
  font-size: 32rpx;
  font-weight: 500;
  color: #282828;
  line-height: 88rpx;
  margin-top: 32rpx;
}
.wxIcon {
  font-size: 26rpx;
  margin-right: 16rpx;
}