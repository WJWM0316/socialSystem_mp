.list-box {
	margin: 20rpx 30rpx;
}

.formIdBtn {
  padding: 0;
  background: none;
  text-align: left;
  line-height: normal;
  overflow: unset;
  margin-bottom: 20rpx;
}

.item2 {
  background:rgba(255,255,255,1);
  /*box-shadow:0rpx -5rpx 40rpx 0rpx rgba(22,39,77,0.05);*/
  box-shadow:0rpx 8rpx 20rpx 0rpx rgba(34,56,101,0.08);
  border-radius:16rpx;
  position: relative;
  padding: 0 40rpx;
}

.item2 .row-one {
  display: flex;
  padding: 30rpx 0;
  align-items: center;
  justify-content: center;
  align-items: center;
}

.item2 .img-box {
  width:120rpx;
  height:120rpx;
  border-radius: 50%;
  position: relative;
  overflow: hidden;
  box-shadow:0rpx 2rpx 12rpx 0rpx rgba(0,0,0,0.12);
  border:2rpx solid rgba(232,233,235,1);
}

.item2 .img-box image{
  width: 100%;
  height: 100%;
}

.item2 .content {
  margin-left: 24rpx;
  max-height: 120rpx;
  flex: 1;
}

.item2 .header {
  height:36rpx;
  line-height:36rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  max-width: 450rpx;
}

.item2 .header .name{
  font-size:36rpx;
  font-weight:700;
  color:rgba(40,40,40,1);
  display: inline;
}

.item2 .row-two .icon-biaojiweiganxingqu{
  font-size:24rpx;
  margin: 0 14rpx;
  color: #8452A7;
}

.item2 .header .zhiwei{
  font-size:26rpx;
  font-weight:300;
  color:#929292;
  display: inline;
  vertical-align: top;
  padding-left: 30rpx;
  position: relative;
}

