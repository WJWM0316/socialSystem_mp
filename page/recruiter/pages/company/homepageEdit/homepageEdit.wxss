.base-info {
  background: white;
  padding: 40rpx 30rpx;
  overflow: hidden;
  box-shadow:0px 10rpx 30rpx 0rpx rgba(22,39,77,0.05);
  border-radius:10rpx;
  margin: 24rpx 30rpx;
}

.base-info .head {
  display: flex;
  justify-content: center;
  align-items: center;
  overflow: hidden;
  border-bottom: 1px dotted #BACED8;
  padding-bottom: 30rpx;
}

.base-info .img-box {
  width:140rpx;
  height:140rpx;
  box-shadow:0rpx 8rpx 20rpx 0rpx rgba(45,45,45,0.06);
  border-radius:18rpx;
  overflow: hidden;
  margin-right: 24rpx;
}

.base-info image {
  width: 100%;
  height: 100%;
}

.base-info .ul {
  padding-top: 15rpx;
}

.base-info .li {
  overflow: hidden;
  display: flex;
  padding: 15rpx 0;
}

.base-info .li:last-child {
  padding-bottom: 0;
}

.base-info .key {
  font-size:28rpx;
  font-weight:300;
  color:rgba(98,98,98,1);
  margin-right: 24rpx;
}

.base-info .value {
  font-size:28rpx;
  color:rgba(40,40,40,1);
  flex: 1;
  text-align: right;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.base-info .content {
  flex: 1;
}

.base-info .edit-box {
  color: #652791;
}

.base-info .h1 {
  font-size:36rpx;
  font-weight:700;
  color:rgba(40,40,40,1);
  line-height: 1;
  margin-bottom: 16rpx;
}

.base-info .h2 {
  font-size:26rpx;
  font-weight:400;
  color:rgba(98,98,98,1);
  line-height: 1;
  max-width: 400rpx;
  text-overflow: ellipsis;
  white-space: nowrap;
  overflow: hidden;
}

.icon-xiangyou {
  float: right;
  color: #BACED8;
}


.introduction .swiper-block {
  height: 312rpx;
  width: 100%;
  margin-top: 40rpx;
}

.introduction .swiper-item {
  overflow: hidden;
  box-sizing: border-box;
  position: relative;
  padding: 16rpx;
  border-radius: 10rpx;
}

.introduction .slide-image {
  height:100%;
  width: 100%;
  box-shadow: 0px 0px 30rpx rgba(0, 0,0,.2);
  z-index: 1;
  border-radius: 10rpx;
}

.introduction .active {
  transform: scale(1.5);
  transition:all .2s ease-in 0s;
  z-index: 20;
}

.introduction {
  background: white;
  overflow: hidden;
  margin: 0 30rpx;
  background:rgba(255,255,255,1);
  box-shadow:0px 4rpx 20rpx 0rpx rgba(101,39,145,0.1);
  border-radius:10rpx;
  margin-bottom: 24rpx;
}

.company-detail {
  overflow: hidden;
  margin: 30rpx 40rpx 40rpx 40rpx;
}

.company-detail .p {
  overflow: hidden;
  font-size:28rpx;
  font-weight:300;
  color:rgba(40,40,40,1);
  line-height:48rpx;
  margin-bottom: 20rpx;
}

.production-box {
  margin: 24rpx 30rpx;
  background: white;
  background:rgba(255,255,255,1);
  box-shadow:0px 4rpx 20rpx 0rpx rgba(101,39,145,0.1);
  border-radius:10rpx;
  overflow: hidden;
}

.production-box .li {
  overflow: hidden;
  display: flex;
  padding: 35rpx 40rpx;
  background: white;
  position: relative;
}

.production-box .li .img-box {
  width:120rpx;
  height:120rpx;
  box-shadow:0rpx 2rpx 12rpx 0rpx rgba(0,0,0,0.12);
  border-radius: 50%;
  margin-right: 30rpx;
  position: relative;
  overflow: hidden;
}

.production-box .li image {
  width: 100%;
  height: 100%;
}

.production-box .li .content {
  flex: 1;
}

.production-box .li .row-one {
  line-height: 36rpx;
  margin-top: 15rpx;
}

.production-box .li .username {
  display: inline-block;
  font-size:36rpx;
  font-weight:500;
  color:rgba(40,40,40,1);
  border-right: 1px solid #E8E9EB;
  padding-right: 15rpx;
  margin-right: 15rpx;
  vertical-align: middle;
}

.production-box .li .recruitment-number {
  display: inline-block;
  font-size:28rpx;
  font-weight:300;
  color:rgba(40,40,40,1);
  max-width:200rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  vertical-align: middle;
}

.production-box .li .row-two {
  font-size:24rpx;
  font-weight:300;
  color:rgba(40,40,40,1);
  margin-top: 16rpx;
  background:rgba(248,248,248,1);
  line-height: 1.5;
  padding: 8rpx 18rpx;
  position: relative;
}

.production-box .li::after {
  content: '';
  display: block;
  height: 2rpx;
  left: 40rpx;
  right: 40rpx;
  background: #E8E9EB;
  position: absolute;
  bottom: 0;
}

.production-box .li .row-two:before {
  width: 0;
  height: 0;
  position: absolute;
  top: -20rpx;
  left: 30rpx;
  border-width: 10rpx;
  border-style: solid;
  border-color: transparent transparent rgba(248,248,248,1) transparent;
  display: block;
  content: '';
}

.production-box .li:last-child::after {
  display: none;
}

