.saveBox {
  width: 100%;
  box-sizing: border-box;
  padding: 29rpx 85rpx;
  display: flex;
  justify-content: space-between;
  background: #fff;
  position: fixed;
  bottom: 0;
  left: 0;
}
.save {
  width: 100%;
  height: 90rpx;
  line-height: 90rpx;
  font-weight:400;
  color:#fff;
  display: block;
  background: #652791;
  text-align: center;
  border-radius: 48rpx;
  font-size: 32rpx;
}
.saveAgain {
  box-sizing: border-box;
  width: 308rpx;
  display: block;
}
.delete{
  width: 248rpx;
  background-color: #BCBCBC;
}