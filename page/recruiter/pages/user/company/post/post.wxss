.company-post .warning {
	height:80rpx;
	background:rgba(255,252,240,1);
	line-height: 80rpx;
	font-size:28rpx;
	font-weight:300;
	color:rgba(255,127,77,1);
	padding: 0 40rpx;
}

.company-post .entry-list .li {
	background: white;
	line-height: 122rpx;
	overflow: hidden;
	font-size:28rpx;
	/*font-weight:400;*/
	position: relative;
	padding: 0 40rpx;
}

.company-post .entry-list .companyShortName {
	display: inline-block;
	height: 122rpx;
	border: unset;
	float: right;
	text-align: right;
}

.company-post .entry-list .li:after {
	content: '';
	display: block;
	position: absolute;
	left: 40rpx;
	right: 40rpx;
	bottom: 0;
	height: 1rpx;
	background: #E8E9EB;
}

.company-post .entry-list .clear-bottom:after {
	display: none;
}

.company-post .entry-list .label-icon {
	margin-right: 24rpx;
	color: #CED7DC;
}

.company-post .entry-list .key {
	display: inline-block;
	font-size:28rpx;
	font-weight:300;
	color:rgba(53,57,67,1);
	width: 140rpx;
	float: left;
}

.company-post .entry-list .key text{
	color: #ED5C5C;
	font-size: 28rpx;
	margin-right: 10rpx;
}

.company-post .entry-list .value {
	display: inline-block;
	font-size:28rpx;
	color:rgba(188,188,188,1);
	overflow: hidden;
	text-overflow: ellipsis;
	white-space: nowrap;
	height: 122rpx;
	line-height: 122rpx;
	width: calc(100% - 140rpx);
	float: left;
	text-align: right;
	box-sizing: border-box;
	position: relative;
}

/*.company-post .entry-list .wid {
