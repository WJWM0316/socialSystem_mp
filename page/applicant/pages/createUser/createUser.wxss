}

.popInner .desc {
	font-size:30rpx;
	color:#282828;
	line-height:30rpx;
	margin: 20rpx 0 22rpx;
}

.popBtn {
	width: 100%;
	height: 88rpx;
	line-height: 88rpx;
	background:rgba(101,39,145,1);
	box-shadow:0rpx 20rpx 18rpx 0rpx rgba(101,39,145,0.2);
	border-radius:49rpx;
	font-size:32rpx;
	color:#fff;
	margin-top: 50rpx;
}

.popInner .icon {
	width: 40rpx;
	height: 40rpx;
	padding: 24rpx;
	position: absolute;
	top: 0;
	right: 0;
	font-size: 44rpx;
	color: #CDCBCF;
	display: flex;
	align-items: center;
	justify-content: center;
}

.popInner .picture {
	width: 100%;
}