.tabBoxBg {
  width: 100%;
  height: 88rpx;
  background: #652791;
}
.tabBox {
  width:690rpx;
  height:136rpx;
  background:rgba(255,255,255,1);
  box-shadow:0rpx 8rpx 20rpx 0rpx rgba(34,56,101,0.08);
  border-radius:10rpx;
  border:1rpx solid rgba(232,233,235,1);
  box-sizing: border-box;
  margin: -70rpx auto 0;
  display: flex;
  justify-content: space-between;
  align-items: center;
  color: #5C565D;
  font-size:26rpx;
  line-height: 26rpx;
  position: relative;
  z-index: 2;
}
.tab-item {
  flex: 1;
  display: flex;
  align-items: center;
  height: 136rpx;
  box-sizing: border-box;
}
.tab-item .inner {
  width: 100%;
  display: flex;
  height: 60rpx;
  align-items: center;
}
.tab-item:first-child {
  padding-left: 80rpx;
}
.tab-item:first-child .inner {
  border-right:1rpx solid rgba(239,233,244,1);
}
.tab-item:last-child {
  padding-right: 80rpx;
}
.tab-item:last-child .inner {
  justify-content: flex-end;
}
.tabBox .icon {
  width:60rpx;
  height:60rpx;
  margin-right: 16rpx;
  display: inline-block;
}

.ul-tab-bar {
  display: flex;
  line-height: 80rpx;
  border-bottom: 1rpx solid rgba(243,233,249,1);
}

.default {
  padding: 0 30rpx;
  background: #FBFBFF;
  padding-top: 36rpx;
  z-index: 222;
}

.fixed {
  position: fixed;
  left: 0;
  right: 0;
  padding-top: 24rpx;
}

.ul-tab-bar .li {
  flex: 1;
  font-size:28rpx;
  font-weight:400;
  color:rgba(188,188,188,1);
  text-align: center;
  position: relative;
  background:rgba(243,245,248,1);
}

.ul-tab-bar .li:first-child {
  border-top-left-radius: 10rpx;
}

.ul-tab-bar .li:last-child {
  border-top-right-radius: 10rpx;
}

.ul-tab-bar .li:before {
  content: '';
  display: block;
  position: absolute;
  left: 50%;
  transform: translateX(-50%);
  bottom: -28rpx;
  width: 0;
  height: 0;
  border-width:16rpx;
  border-style: solid;
  border-color: rgba(243,233,249,1) transparent transparent transparent;
  display: block;
  content: '';
  opacity: 0;
  visibility: hidden;
  transition: all ease .2s;
  z-index: 2;
}

.ul-tab-bar .li:after {
  content: '';
  display: block;
  position: absolute;
  left: 50%;
  transform: translateX(-50%);
  bottom: -30rpx;
  width: 0;
  height: 0;
  border-width:16rpx;
  border-style: solid;
  border-color: rgba(243,233,249,1) transparent transparent transparent;
  display: block;
  content: '';
  opacity: 0;
  visibility: hidden;
  transition: all ease .4s;
  z-index: 1;
}

.ul-tab-bar .active {
  font-weight:500;
  color:#652791;
  background:rgba(243,233,249,1);
  pointer-events: none;
}

.ul-tab-bar .active:before {
  opacity: 1;
  visibility: visible;
}

.ul-tab-bar .active:after {
  opacity: 1;
  visibility: visible;
}

.ul-tab-bar .reddot {
  display: inline;
  position: relative;
}

.ul-tab-bar .reddot:before {
  position: absolute;
  top: -5rpx;
  right: -20rpx;
  display: block;
  content: '';
  background: red;
  width:14rpx;
  height:14rpx;
  background:rgba(255,73,73,1);
  border-radius: 50%;
}
.jump {
  width: 430rpx;
  height: 98rpx;
  background:rgba(255,220,41,1);
  box-shadow:0rpx 0rpx 30rpx 0rpx rgba(22,39,77,0.1);
  border-radius:49rpx;
  margin: 44rpx auto 0;
  font-size:30rpx;
  font-weight:400;
  color:rgba(40,40,40,1);
  line-height: 98rpx;
}

.nodata {
  background:rgba(255,255,255,1);
  box-shadow:0rpx 8rpx 20rpx 0rpx rgba(34,56,101,0.08);
  border-radius:10rpx;
  margin:0 30rpx;
  overflow: hidden;
  display: flex;
  justify-content: center;
  align-items: center;
}