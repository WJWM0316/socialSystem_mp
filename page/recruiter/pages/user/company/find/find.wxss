
.search-company-page .page-header {
	padding: 55rpx 40rpx 40rpx 40rpx;
	background: white;
}

.search-company-page .h1 {
	font-size:36rpx;
	font-weight:bold;
	color:rgba(40,40,40,1);
	line-height: 1;
}

.search-company-page .h2 {
	font-size:26rpx;
	font-weight:400;
	color:rgba(98,98,98,1);
	line-height: 1;
	margin: 15rpx 0;
}

.search-company-page .p {
	font-size:24rpx;
	font-weight:400;
	color:rgba(146,146,146,1);
	line-height: 1.8;
}

.search-company-page .input-li {
	height:122rpx;
	line-height: 122rpx;
	font-size:32rpx;
	font-weight:500;
	color:rgba(188,188,188,1);
	padding: 0 40rpx;
	display: flex;
	background: white;
	position: relative;
	margin-top: 25rpx;
}

.search-company-page .example {
	font-size:26rpx;
	font-weight:400;
	color:rgba(98,98,98,1);
	line-height: 90rpx;
	background: white;
	padding: 0 40rpx;
	position: relative;
	display: block;
	overflow: hidden;
}

.search-company-page .example:before {
	content: '';
	display: block;
	position: absolute;
	left: 40rpx;
	right: 40rpx;
	top: 0;
	height: 1px;
	background: #E8E9EB;
}

.search-company-page input {
	height:100%;
	width: 100%;
	color: #626262;
}

.search-company-page .company-name {
	flex: 1;
	font-size: 30rpx;
}

.search-company-page .btn-search {
	width: 150rpx;
}

.search-company-page .li {
	height:98rpx;
	line-height: 98rpx;
	background:rgba(255,255,255,1);
	padding: 0 40rpx;
	position: relative;
	font-size:26rpx;
	font-weight:400;
	color:rgba(98,98,98,1);
	position: relative;
	overflow: hidden;
}

.search-company-page .li:after {
	content: '';
	display: block;
	position: absolute;
	left: 40rpx;
	right: 40rpx;
	bottom: 0;
	height: 1px;
	background: #E8E9EB;
}

.search-company-page .li:last-child:after {
	display: none;
}

.certification-layout {}

.mask {
	position: fixed;
	left: 0;
	top: 0;
	right: 0;
	bottom: 0;
	background: rgba(0,0,0,.6);
	z-index: 10000;
	transition: all ease .2s;
	opacity: 0;
	visibility: hidden;
	z-index: 10000;
}

.certification-layout-show {
	opacity: 1;
	visibility: visible;
}

.certification-layout .box{
	position: fixed;
	left: 50rpx;
	right: 50rpx;
	top: 50%;
	transform: translateY(-50%);
	background: white;
	border-radius:18rpx;
	box-sizing: border-box;
	padding: 60rpx 55rpx;
	opacity: 0;
	visibility: hidden;
	transition: all ease .4s;
	height: 714rpx;
	z-index: 10001;
}

.certification-layout .box-show{
	transform: translateY(-50%);
	opacity: 1;
	visibility: visible;
}

.certification-layout .h1{
	font-size:36rpx;
	font-weight:500;
	color:rgba(53,57,67,1);
	line-height: 1;
	margin-bottom: 60rpx;
	text-align: center;
}

.certification-layout .item{
	display: flex;
	margin-bottom: 55rpx;
	overflow: hidden;
}

.certification-layout .h2 {
	font-size:36rpx;
	font-weight:500;
	color:rgba(101,39,145,1);
	line-height: 1;
	margin-bottom: 16rpx;
}

.certification-layout .p {
	font-size:28rpx;
	font-weight:400;
	color:rgba(98,98,98,1);
	line-height: 1.5;
}

.certification-layout .ul {
	overflow: hidden;
	height: 360rpx;
	margin-bottom: 30rpx;
}

.certification-layout .circle {
	width:50rpx;
	height:50rpx;
	background:rgba(255,255,255,1);
	border:2rpx dotted rgba(101,39,145,1);
	border-radius: 50%;
